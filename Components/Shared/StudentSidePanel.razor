                <p>Are you sure you want to log out?</p>
            </div>
            <div class="logout-modal-footer">
                <button type="button" class="logout-modal-cancel" @onclick="CloseLogoutModal">Cancel</button>
                <button type="button" class="logout-modal-confirm" @onclick="ConfirmLogout">Logout</button>
            </div>
        </div>
    </div>
}

@code {
    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;

    private bool showLogoutModal = false;
    private string profilePictureUrl = string.Empty;
    private System.Timers.Timer? refreshTimer;
    private int currentUserId = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadProfilePicture();
        currentUserId = AuthStateService.CurrentUser?.Id ?? 0;

        // Set up a timer to refresh the profile picture every 30 seconds
        // This ensures the sidebar updates when the profile picture is changed in settings
        refreshTimer = new System.Timers.Timer(30000); // 30 seconds
        refreshTimer.Elapsed += async (sender, e) => await RefreshProfilePicture();
        refreshTimer.AutoReset = true;
        refreshTimer.Enabled = true;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadProfilePicture();
        }
    }

    private async Task LoadProfilePicture()
    {
        try
        {
            var studentId = AuthStateService.CurrentUser?.Id ?? 0;
            if (studentId > 0)
            {
                var settings = await GetStudentSettingsFromDatabase(studentId);
                if (settings != null && !string.IsNullOrEmpty(settings.ProfilePicture))
                {
                    profilePictureUrl = settings.ProfilePicture;
                    StateHasChanged();
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading profile picture: {ex.Message}");
        }
    }

    private async Task RefreshProfilePicture()
    {
        try
        {
            var studentId = AuthStateService.CurrentUser?.Id ?? 0;
            if (studentId > 0 && studentId == currentUserId)
            {
                var settings = await GetStudentSettingsFromDatabase(studentId);
                if (settings != null)
                {
                    var newProfilePicture = settings.ProfilePicture ?? "";
                    if (profilePictureUrl != newProfilePicture)
                    {
                        profilePictureUrl = newProfilePicture;
                        await InvokeAsync(StateHasChanged);
                    }
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error refreshing profile picture: {ex.Message}");
        }
    }

    private async Task<StudentSettings?> GetStudentSettingsFromDatabase(int studentId)
    {
        var connectionString = Configuration.GetConnectionString("DefaultConnection");

        using var connection = new SqliteConnection(connectionString);
        await connection.OpenAsync();

        var command = connection.CreateCommand();
        command.CommandText = @"
            SELECT ProfilePicture
            FROM StudentSettings
            WHERE StudentId = @studentId";

        command.Parameters.AddWithValue("@studentId", studentId);

        using var reader = await command.ExecuteReaderAsync();

        if (await reader.ReadAsync())
        {
            return new StudentSettings
            {
                ProfilePicture = !reader.IsDBNull(0) ? reader.GetString(0) : null
            };
        }

        return null;
    }

    private string GetUserInitials()
    {
        var name = AuthStateService.CurrentUser?.Name ?? "";
        if (string.IsNullOrEmpty(name)) return "P";

        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();

        return name.Length >= 2 ? name.Substring(0, 2).ToUpper() : name.ToUpper();
    }

    private void ShowLogoutConfirmation()
    {
        showLogoutModal = true;
        StateHasChanged();
    }

    private void CloseLogoutModal()
    {
        showLogoutModal = false;
        StateHasChanged();
    }

    private async Task ConfirmLogout()
    {
        showLogoutModal = false;
        StateHasChanged();

        await AuthStateService.LogoutAsync();
        NavigationManager.NavigateTo("/", true);
    }

    public void Dispose()
    {
        refreshTimer?.Dispose();
    }
}

