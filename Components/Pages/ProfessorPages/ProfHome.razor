@page "/profhome"
@using Thesis.Models
@using Thesis.Components.Layout
@layout MainLayout
@inject AuthStateService AuthStateService
@inject NavigationManager Navigation
@inject Data.AppDbContext Context

<PageTitle>Gnosis - Professor Dashboard</PageTitle>

@if (isLoading)
{
    <div class="loading-container">
        <div class="spinner"></div>
        <p>Loading...</p>
    </div>
}
else if (AuthStateService.IsLoggedIn)
{
    <!-- Top Header -->
    <div class="top-header">
        <div class="header-left">
            <h1>Professor Dashboard</h1>
            <p class="welcome-text">Welcome back, @AuthStateService.CurrentUser?.Name!</p>
        </div>
        <div class="header-right">
            <div class="date-display">@currentDate.ToString("dddd, MMMM dd, yyyy")</div>
        </div>
    </div>

    <!-- Logout Confirmation Modal -->
    @if (showLogoutModal)
    {
        <div class="modal-overlay">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Confirm Logout</h3>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to logout?</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-outline" @onclick="CloseLogoutModal">Cancel</button>
                    <button class="btn btn-danger" @onclick="ConfirmLogout">Logout</button>
                </div>
            </div>
        </div>
    }

    <!-- Success/Error Message Toast -->
    @if (!string.IsNullOrEmpty(toastMessage))
    {
        <div class="toast @toastType">
            <div class="toast-content">
                <span>@toastMessage</span>
                <button class="toast-close" @onclick="HideToast">×</button>
            </div>
        </div>
    }

    <!-- Content Area -->
    <div class="content-area">
        <!-- Stats Cards -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">📈</div>
                <div class="stat-content">
                    <div class="stat-value">@courses.Count</div>
                    <div class="stat-label">Courses</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">✅</div>
                <div class="stat-content">
                    <div class="stat-value">@completedCoursesCount</div>
                    <div class="stat-label">Completed</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">⏰</div>
                <div class="stat-content">
                    <div class="stat-value">@ongoingCoursesCount</div>
                    <div class="stat-label">Ongoing</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">👥</div>
                <div class="stat-content">
                    <div class="stat-value">@totalStudents</div>
                    <div class="stat-label">Students</div>
                </div>
            </div>
        </div>

        <!-- Main Content Cards -->
        <div class="content-grid">
            <div class="content-card recent-activity">
                <div class="card-header">
                    <h3>Recent Activity</h3>
                    
                </div>
                <div class="card-content">
                    <div class="activity-list">
                        @if (recentActivities.Any())
                        {
                            @foreach (var activity in recentActivities)
                            {
                                <div class="activity-item">
                                    <div class="activity-icon">@activity.Icon</div>
                                    <div class="activity-details">
                                        <div class="activity-title">@activity.Description</div>
                                        <div class="activity-time">@activity.TimeAgo</div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="no-data">No recent activity</div>
                        }
                    </div>
                </div>
            </div>

            <div class="content-card quick-actions">
                <div class="card-header">
                    <h3>Quick Actions</h3>
                </div>
                <div class="card-content">
                    <div class="actions-grid">
                        <button class="action-btn" @onclick="CreateAssignment">
                            <span class="action-icon">➕</span>
                            <span class="action-text">New Exercise</span>
                        </button>
                        <button class="action-btn" @onclick="ViewCourses">
                            <span class="action-icon">📚</span>
                            <span class="action-text">View Courses</span>
                        </button>
                        <button class="action-btn" @onclick="NewMessage">
                            <span class="action-icon">👥</span>
                            <span class="action-text">New Message</span>
                        </button>
                        <button class="action-btn" @onclick="GradeSubmissions">
                            <span class="action-icon">📝</span>
                            <span class="action-text">Grade Management</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Course Overview -->
        <div class="content-card full-width">
            <div class="card-header">
                <h3>Course Overview</h3>
                <div>
                    <select class="form-select" @bind="selectedCourseId" @bind:after="LoadCourseData">
                        <option value="0">All Courses</option>
                        @foreach (var course in courses)
                        {
                            <option value="@course.Id">@course.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="card-content">
                @if (courses.Any())
                {
                    <div class="course-analytics">
                        <div class="analytics-grid">
                            <div class="analytics-card">
                                <h4>Average Grade</h4>
                                <div class="analytics-value">@GetAverageGrade().ToString("F1")</div>
                            </div>
                            <div class="analytics-card">
                                <h4>Enrolled Students</h4>
                                <div class="analytics-value">@GetTotalEnrollments()</div>
                            </div>
                            <div class="analytics-card">
                                <h4>Graded Students</h4>
                                <div class="analytics-value">@GetGradedStudentsCount()</div>
                            </div>
                            <div class="analytics-card">
                                <h4>Pending Grades</h4>
                                <div class="analytics-value">@GetPendingGradesCount()</div>
                            </div>
                        </div>
                        <div class="chart-container">
                            <h4>Grade Distribution</h4>
                            <div class="grade-bars">
                                @foreach (var range in gradeDistribution)
                                {
                                    <div class="grade-bar">
                                        <div class="grade-range">@range.Range</div>
                                        <div class="bar-container">
                                            <div class="bar" style="width: @(range.Percentage)%;"></div>
                                        </div>
                                        <div class="grade-count">@range.Count</div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="placeholder-content">
                        <p>No courses available. Create your first course to get started.</p>
                        <button class="btn btn-primary" @onclick="CreateCourse">Create First Course</button>
                    </div>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="home-container">
        <div class="welcome-section">
            <h1>Welcome to Thesis Application</h1>
            <p>This is the main page.</p>
            <div class="navigation-links mt-4">
                <a href="/login" class="btn btn-outline-primary me-2">Login</a>
                <a href="/register" class="btn btn-primary">Register</a>
            </div>
        </div>
    </div>
}

@code {
    private bool isLoading = true;
    private bool showLogoutModal = false;
    private DateTime currentDate = DateTime.Now;
    private string toastMessage = "";
    private string toastType = "toast-success";
    private int selectedCourseId = 0;

    // Real data from database
    private List<Course> courses = new();
    private List<Enrollment> enrollments = new();
    private List<Grade> grades = new();
    private List<ActivityItem> recentActivities = new();
    private List<GradeDistribution> gradeDistribution = new();

    private int completedCoursesCount = 0;
    private int ongoingCoursesCount = 0;
    private int totalStudents = 0;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await LoadRealData();
            CalculateStatistics();
            CalculateGradeDistribution();
            await GenerateRecentActivities();
            isLoading = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            ShowToast("Error loading dashboard data", "error");
            isLoading = false;
        }
    }

    private async Task LoadRealData()
    {
        var currentUser = AuthStateService.CurrentUser;
        if (currentUser == null) return;

        // Load professor's courses
        courses = await Context.Courses
            .Where(c => c.ProfessorId == currentUser.Id)
            .ToListAsync();

        // Load enrollments for professor's courses
        var courseIds = courses.Select(c => c.Id).ToList();
        if (courseIds.Any())
        {
            enrollments = await Context.Enrollments
                .Where(e => courseIds.Contains(e.CourseId))
                .ToListAsync();
        }

        // Load grades for professor's courses
        if (courseIds.Any())
        {
            grades = await Context.Grades
                .Where(g => courseIds.Contains(g.CourseId))
                .ToListAsync();
        }
    }

    private void CalculateStatistics()
    {
        totalStudents = enrollments.Select(e => e.StudentId).Distinct().Count();

        // For simplicity, consider all courses as ongoing
        // In a real app, you might have a status field or date-based logic
        ongoingCoursesCount = courses.Count;
        completedCoursesCount = 0; // You could implement completion logic based on dates
    }

    private void CalculateGradeDistribution()
    {
        var allGrades = selectedCourseId == 0
            ? grades.Select(g => g.GradeValue).ToList()
            : grades.Where(g => g.CourseId == selectedCourseId).Select(g => g.GradeValue).ToList();

        if (!allGrades.Any())
        {
            gradeDistribution = new List<GradeDistribution>
            {
                new() { Range = "9-10", Count = 0, Percentage = 0 },
                new() { Range = "8-8.9", Count = 0, Percentage = 0 },
                new() { Range = "7-7.9", Count = 0, Percentage = 0 },
                new() { Range = "6-6.9", Count = 0, Percentage = 0 },
                new() { Range = "0-5.9", Count = 0, Percentage = 0 }
            };
            return;
        }

        gradeDistribution = new List<GradeDistribution>
        {
            new() { Range = "9-10", Count = allGrades.Count(g => g >= 9), Percentage = 0 },
            new() { Range = "8-8.9", Count = allGrades.Count(g => g >= 8 && g < 9), Percentage = 0 },
            new() { Range = "7-7.9", Count = allGrades.Count(g => g >= 7 && g < 8), Percentage = 0 },
            new() { Range = "6-6.9", Count = allGrades.Count(g => g >= 6 && g < 7), Percentage = 0 },
            new() { Range = "0-5.9", Count = allGrades.Count(g => g < 6), Percentage = 0 }
        };

        var total = allGrades.Count;
        foreach (var range in gradeDistribution)
        {
            range.Percentage = total > 0 ? (range.Count * 100) / total : 0;
        }
    }

    private async Task GenerateRecentActivities()
    {
        recentActivities = new List<ActivityItem>();
        var currentUser = AuthStateService.CurrentUser;
        if (currentUser == null) return;

        // Recent grade entries
        var recentGrades = await Context.Grades
            .Where(g => courses.Select(c => c.Id).Contains(g.CourseId))
            .OrderByDescending(g => g.CreatedAt)
            .Take(5)
            .ToListAsync();

        foreach (var grade in recentGrades)
        {
            var course = courses.FirstOrDefault(c => c.Id == grade.CourseId);
            var student = await Context.Users.FirstOrDefaultAsync(u => u.Id == grade.StudentId);

            if (course != null && student != null)
            {
                var timeAgo = GetTimeAgo(grade.CreatedAt);
                recentActivities.Add(new ActivityItem
                {
                    Icon = "📝",
                    Description = $"Graded {student.Name} in {course.Name}: {grade.GradeValue:F1}",
                    TimeAgo = timeAgo
                });
            }
        }

        // Recent enrollments
        var recentEnrollments = await Context.Enrollments
            .Where(e => courses.Select(c => c.Id).Contains(e.CourseId))
            .OrderByDescending(e => e.EnrollmentDate)
            .Take(3)
            .ToListAsync();

        foreach (var enrollment in recentEnrollments)
        {
            var course = courses.FirstOrDefault(c => c.Id == enrollment.CourseId);
            var student = await Context.Users.FirstOrDefaultAsync(u => u.Id == enrollment.StudentId);

            if (course != null && student != null)
            {
                var timeAgo = GetTimeAgo(enrollment.EnrollmentDate);
                recentActivities.Add(new ActivityItem
                {
                    Icon = "👥",
                    Description = $"New student {student.Name} enrolled in {course.Name}",
                    TimeAgo = timeAgo
                });
            }
        }

        // Recent messages (if any)
        var recentMessages = await Context.Messages
            .Where(m => m.SenderRole == "Student")
            .OrderByDescending(m => m.CreatedAt)
            .Take(2)
            .ToListAsync();

        foreach (var message in recentMessages)
        {
            var timeAgo = GetTimeAgo(message.CreatedAt);
            recentActivities.Add(new ActivityItem
            {
                Icon = "📧",
                Description = $"New message from {message.SenderName}: {message.Subject}",
                TimeAgo = timeAgo
            });
        }

        // Sort by time (most recent first)
        recentActivities = recentActivities
            .OrderByDescending(a => GetActivityDateTime(a.TimeAgo))
            .Take(5)
            .ToList();
    }

    private string GetTimeAgo(DateTime dateTime)
    {
        var timeSpan = DateTime.Now - dateTime;

        if (timeSpan.TotalDays >= 1)
            return $"{(int)timeSpan.TotalDays} days ago";
        else if (timeSpan.TotalHours >= 1)
            return $"{(int)timeSpan.TotalHours} hours ago";
        else if (timeSpan.TotalMinutes >= 1)
            return $"{(int)timeSpan.TotalMinutes} minutes ago";
        else
            return "Just now";
    }

    private DateTime GetActivityDateTime(string timeAgo)
    {
        if (timeAgo.Contains("days"))
        {
            var days = int.Parse(timeAgo.Split(' ')[0]);
            return DateTime.Now.AddDays(-days);
        }
        else if (timeAgo.Contains("hours"))
        {
            var hours = int.Parse(timeAgo.Split(' ')[0]);
            return DateTime.Now.AddHours(-hours);
        }
        else if (timeAgo.Contains("minutes"))
        {
            var minutes = int.Parse(timeAgo.Split(' ')[0]);
            return DateTime.Now.AddMinutes(-minutes);
        }
        else
        {
            return DateTime.Now;
        }
    }

    private async Task LoadCourseData()
    {
        CalculateGradeDistribution();
        StateHasChanged();
    }

    private double GetAverageGrade()
    {
        var relevantGrades = selectedCourseId == 0
            ? grades.Select(g => g.GradeValue)
            : grades.Where(g => g.CourseId == selectedCourseId).Select(g => g.GradeValue);

        return relevantGrades.Any() ? relevantGrades.Average() : 0;
    }

    private int GetTotalEnrollments()
    {
        return selectedCourseId == 0
            ? enrollments.Count
            : enrollments.Count(e => e.CourseId == selectedCourseId);
    }

    private int GetGradedStudentsCount()
    {
        return selectedCourseId == 0
            ? grades.Select(g => g.StudentId).Distinct().Count()
            : grades.Where(g => g.CourseId == selectedCourseId).Select(g => g.StudentId).Distinct().Count();
    }

    private int GetPendingGradesCount()
    {
        if (selectedCourseId == 0)
        {
            var enrolledStudents = enrollments.Select(e => e.StudentId).Distinct();
            var gradedStudents = grades.Select(g => g.StudentId).Distinct();
            return enrolledStudents.Except(gradedStudents).Count();
        }
        else
        {
            var courseEnrollments = enrollments.Where(e => e.CourseId == selectedCourseId).Select(e => e.StudentId);
            var courseGrades = grades.Where(g => g.CourseId == selectedCourseId).Select(g => g.StudentId);
            return courseEnrollments.Except(courseGrades).Count();
        }
    }

    // Navigation Methods
    private void CreateAssignment() => Navigation.NavigateTo("/profex");
    private void ViewCourses() => Navigation.NavigateTo("/profcourse");
    private void NewMessage() => Navigation.NavigateTo("/profmess");
    private void GradeSubmissions() => Navigation.NavigateTo("/profgrades");
    private void CreateCourse() => Navigation.NavigateTo("/");

    // Toast Methods
    private void ShowToast(string message, string type = "success")
    {
        toastMessage = message;
        toastType = type == "error" ? "toast-error" : "toast-success";
        StateHasChanged();
    }

    private void HideToast()
    {
        toastMessage = "";
        StateHasChanged();
    }

    // Logout Methods
    private void ShowLogoutModal() => showLogoutModal = true;
    private void CloseLogoutModal() => showLogoutModal = false;

    private async Task ConfirmLogout()
    {
        await AuthStateService.LogoutAsync();
        Navigation.NavigateTo("/", true);
    }

    // Helper classes for UI
    public class ActivityItem
    {
        public string Icon { get; set; } = "";
        public string Description { get; set; } = "";
        public string TimeAgo { get; set; } = "";
    }

    public class GradeDistribution
    {
        public string Range { get; set; } = "";
        public int Count { get; set; }
        public int Percentage { get; set; }
    }
}

