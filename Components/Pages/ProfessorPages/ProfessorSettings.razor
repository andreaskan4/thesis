@page "/profsettings"
@inject AuthStateService AuthStateService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject TeacherSettingsService TeacherSettingsService

<PageTitle>Thesis - Teacher Settings</PageTitle>

@if (!isAuthChecked)
{
    <div class="loading-container">
        <div class="spinner"></div>
        <p>Loading Settings...</p>
    </div>
}
else if (!isAuthorized)
{
    <div class="unauthorized-container">
        <div class="unauthorized-card">
            <div class="unauthorized-icon">🚫</div>
            <h3>Access Denied</h3>
            <p>You don't have permission to manage teacher settings.</p>
            <button class="btn btn-primary" @onclick="RedirectToHome">Return to Home</button>
        </div>
    </div>
}
else
{
    <div class="teacher-settings">
        <div class="header-bar">
            <button class="back-btn" @onclick="GoBack">← Back to Dashboard</button>
            <h2>Teacher Settings</h2>
            <div class="info-badge">Teacher View</div>
        </div>

        @if (isLoading)
        {
            <div class="loading">Loading teacher settings...</div>
        }
        else if (teacherSettings == null)
        {
            <div class="error-message">
                <h3>Error Loading Settings</h3>
                <p>Unable to load teacher settings. Please try again.</p>
                <button class="retry-btn" @onclick="LoadSettings">Retry</button>
            </div>
        }
        else
        {
            <div class="settings-container">
                <!-- Left Navigation -->
                <div class="settings-nav">
                    <div class="nav-section">
                        <h4>Teaching Settings</h4>
                        <button class="nav-btn @(activeSection == "grading" ? "active" : "")" @onclick='() => SetActiveSection("grading")'>
                            📊 Grading
                        </button>
                        <button class="nav-btn @(activeSection == "courses" ? "active" : "")" @onclick='() => SetActiveSection("courses")'>
                            📚 Courses
                        </button>
                        <button class="nav-btn @(activeSection == "exercises" ? "active" : "")" @onclick='() => SetActiveSection("exercises")'>
                            📝 Exercises
                        </button>
                        <button class="nav-btn @(activeSection == "notifications" ? "active" : "")" @onclick='() => SetActiveSection("notifications")'>
                            🔔 Notifications
                        </button>
                    </div>
                </div>

                <!-- Right Content -->
                <div class="settings-content">
                    <!-- Grading Settings -->
                    @if (activeSection == "grading")
                    {
                        <div class="settings-section">
                            <h3>Grading Settings</h3>
                            <div class="settings-grid">
                                <div class="setting-item">
                                    <label class="setting-label">
                                        <span>Default Grading Scale</span>
                                        <select @bind="teacherSettings.DefaultGradingScale" class="setting-select">
                                            <option value="0-100">0-100 Points</option>
                                            <option value="0-10">0-10 Points</option>
                                            <option value="A-F">A-F Letter Grades</option>
                                            <option value="Pass/Fail">Pass/Fail</option>
                                        </select>
                                    </label>
                                    <small class="setting-description">Your preferred grading scale</small>
                                </div>

                                <div class="setting-item">
                                    <label class="setting-label checkbox-label">
                                        <input type="checkbox" @bind="teacherSettings.AutoPublishGrades" />
                                        <span>Auto-Publish Grades</span>
                                    </label>
                                    <small class="setting-description">Automatically publish grades after entering them</small>
                                </div>

                                <div class="setting-item">
                                    <label class="setting-label checkbox-label">
                                        <input type="checkbox" @bind="teacherSettings.GradeNotifications" />
                                        <span>Grade Change Notifications</span>
                                    </label>
                                    <small class="setting-description">Receive notifications when students view their grades</small>
                                </div>

                                <div class="setting-item">
                                    <label class="setting-label">
                                        <span>Grade Rounding</span>
                                        <select @bind="teacherSettings.GradeRounding" class="setting-select">
                                            <option value="none">No Rounding</option>
                                            <option value="nearest">Nearest Whole Number</option>
                                            <option value="up">Always Round Up</option>
                                            <option value="down">Always Round Down</option>
                                        </select>
                                    </label>
                                    <small class="setting-description">How to round final grades</small>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Courses Settings -->
                    @if (activeSection == "courses")
                    {
                        <div class="settings-section">
                            <h3>Course Management</h3>
                            <div class="settings-grid">
                                <div class="setting-item">
                                    <label class="setting-label checkbox-label">
                                        <input type="checkbox" @bind="teacherSettings.AutoArchiveCourses" />
                                        <span>Auto-Archive Courses</span>
                                    </label>
                                    <small class="setting-description">Automatically archive courses after semester ends</small>
                                </div>

                                <div class="setting-item">
                                    <label class="setting-label checkbox-label">
                                        <input type="checkbox" @bind="teacherSettings.AllowStudentWithdrawals" />
                                        <span>Allow Student Withdrawals</span>
                                    </label>
                                    <small class="setting-description">Allow students to withdraw from your courses</small>
                                </div>

                                <div class="setting-item">
                                    <label class="setting-label">
                                        <span>Default Course Template</span>
                                        <select @bind="teacherSettings.DefaultCourseTemplate" class="setting-select">
                                            <option value="standard">Standard Template</option>
                                            <option value="lecture">Lecture-Based</option>
                                            <option value="lab">Lab Course</option>
                                            <option value="seminar">Seminar</option>
                                        </select>
                                    </label>
                                    <small class="setting-description">Default template for new courses</small>
                                </div>

                                <div class="setting-item">
                                    <label class="setting-label">
                                        <span>Max Students Per Course</span>
                                        <input type="number" @bind="teacherSettings.MaxStudentsPerCourse" class="setting-input" min="1" max="500" />
                                    </label>
                                    <small class="setting-description">Maximum students allowed in your courses</small>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Exercises Settings -->
                    @if (activeSection == "exercises")
                    {
                        <div class="settings-section">
                            <h3>Exercise Settings</h3>
                            <div class="settings-grid">
                                <div class="setting-item">
                                    <label class="setting-label">
                                        <span>Default Exercise Points</span>
                                        <input type="number" @bind="teacherSettings.DefaultExercisePoints" class="setting-input" min="1" max="1000" />
                                    </label>
                                    <small class="setting-description">Default maximum points for new exercises</small>
                                </div>

                                <div class="setting-item">
                                    <label class="setting-label">
                                        <span>Default Due Time</span>
                                        <input type="time"
                                               value="@defaultDueTimeString"
                                               @onchange="@(e => defaultDueTimeString = e.Value?.ToString() ?? "23:59")"
                                               class="setting-input" />
                                    </label>
                                    <small class="setting-description">Default due time for new exercises</small>
                                </div>

                                <div class="setting-item">
                                    <label class="setting-label checkbox-label">
                                        <input type="checkbox" @bind="teacherSettings.AllowLateSubmissions" />
                                        <span>Allow Late Submissions</span>
                                    </label>
                                    <small class="setting-description">Allow students to submit exercises after due date</small>
                                </div>

                                <div class="setting-item">
                                    <label class="setting-label">
                                        <span>Late Submission Penalty (%)</span>
                                        <input type="number" @bind="teacherSettings.LateSubmissionPenalty" class="setting-input" min="0" max="100" />
                                    </label>
                                    <small class="setting-description">Percentage penalty for late submissions</small>
                                </div>

                                <div class="setting-item">
                                    <label class="setting-label checkbox-label">
                                        <input type="checkbox" @bind="teacherSettings.RequireFileUpload" />
                                        <span>Require File Upload</span>
                                    </label>
                                    <small class="setting-description">Require file upload for exercise submissions</small>
                                </div>

                                <div class="setting-item">
                                    <label class="setting-label">
                                        <span>Max File Size (MB)</span>
                                        <input type="number" @bind="teacherSettings.MaxFileSizeMB" class="setting-input" min="1" max="100" />
                                    </label>
                                    <small class="setting-description">Maximum file size for exercise submissions</small>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Notifications Settings -->
                    @if (activeSection == "notifications")
                    {
                        <div class="settings-section">
                            <h3>Notification Settings</h3>
                            <div class="settings-grid">
                                <div class="setting-item">
                                    <label class="setting-label checkbox-label">
                                        <input type="checkbox" @bind="teacherSettings.NotifyNewSubmissions" />
                                        <span>New Submission Notifications</span>
                                    </label>
                                    <small class="setting-description">Get notified when students submit new work</small>
                                </div>

                                <div class="setting-item">
                                    <label class="setting-label checkbox-label">
                                        <input type="checkbox" @bind="teacherSettings.NotifyLateSubmissions" />
                                        <span>Late Submission Notifications</span>
                                    </label>
                                    <small class="setting-description">Get notified about late submissions</small>
                                </div>

                                <div class="setting-item">
                                    <label class="setting-label checkbox-label">
                                        <input type="checkbox" @bind="teacherSettings.NotifyGradeViews" />
                                        <span>Grade View Notifications</span>
                                    </label>
                                    <small class="setting-description">Get notified when students view their grades</small>
                                </div>

                                <div class="setting-item">
                                    <label class="setting-label checkbox-label">
                                        <input type="checkbox" @bind="teacherSettings.EmailDigest" />
                                        <span>Email Digest</span>
                                    </label>
                                    <small class="setting-description">Receive daily email summaries</small>
                                </div>

                                <div class="setting-item">
                                    <label class="setting-label">
                                        <span>Notification Frequency</span>
                                        <select @bind="teacherSettings.NotificationFrequency" class="setting-select">
                                            <option value="immediate">Immediate</option>
                                            <option value="hourly">Hourly</option>
                                            <option value="daily">Daily</option>
                                        </select>
                                    </label>
                                    <small class="setting-description">How often to receive notifications</small>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="settings-actions">
                        <button class="save-btn" @onclick="SaveSettings" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span>Saving...</span>
                            }
                            else
                            {
                                <span>💾 Save Settings</span>
                            }
                        </button>
                        <button class="reset-btn" @onclick="ResetToDefaults">
                            🔄 Reset to Defaults
                        </button>
                        <button class="cancel-btn" @onclick="GoBack">
                            ❌ Cancel
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private bool isAuthorized = false;
    private bool isAuthChecked = false;
    private bool isLoading = false;
    private bool isSaving = false;

    private string activeSection = "grading";
    private TeacherSettings teacherSettings = new();
    private string defaultDueTimeString = "23:59";
    private bool settingsLoaded = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await AuthStateService.InitializeAsync();
            var user = AuthStateService.CurrentUser;

            isAuthorized = user != null && (user.Role == "Teacher" || user.Role == "Admin");
            isAuthChecked = true;

            if (isAuthorized)
            {
                await LoadSettings();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error initializing: {ex.Message}");
            isAuthChecked = true;
        }
    }

    private async Task LoadSettings()
    {
        if (settingsLoaded && teacherSettings != null) return;

        isLoading = true;
        StateHasChanged();

        try
        {
            var teacherId = await GetCurrentTeacherId();
            teacherSettings = await TeacherSettingsService.GetTeacherSettingsAsync(teacherId);

            if (teacherSettings != null)
            {
                defaultDueTimeString = teacherSettings.DefaultDueTime ?? "23:59";
                settingsLoaded = true;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading settings: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading settings: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void SetActiveSection(string section)
    {
        activeSection = section;
        StateHasChanged();
    }

    private async Task SaveSettings()
    {
        isSaving = true;
        StateHasChanged();

        try
        {
            teacherSettings.DefaultDueTime = defaultDueTimeString;

            var teacherId = await GetCurrentTeacherId();
            await TeacherSettingsService.UpdateTeacherSettingsAsync(teacherId, teacherSettings);
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error saving settings: {ex.Message}");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private async Task ResetToDefaults()
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm",
            "Are you sure you want to reset all settings to default values?");

        if (!confirmed) return;

        try
        {
            teacherSettings = new TeacherSettings();
            defaultDueTimeString = "23:59";
            StateHasChanged();
            
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error resetting settings: {ex.Message}");
        }
    }

    private async Task<int> GetCurrentTeacherId()
    {
        var user = AuthStateService.CurrentUser;
        return user?.Id ?? 0;
    }

    private void GoBack() => Navigation.NavigateTo("/profhome");
    private void RedirectToHome() => Navigation.NavigateTo("/");
}
