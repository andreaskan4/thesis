@page "/profann"
@inject AuthStateService AuthStateService
@inject IJSRuntime JSRuntime
@inject Data.AppDbContext Context
@using Thesis.Models
@using Microsoft.EntityFrameworkCore

<PageTitle>Thesis - Announcements</PageTitle>

@if (!isAuthChecked)
{
    <div class="loading-container">
        <div class="spinner"></div>
        <p>Loading Announcements...</p>
    </div>
}
else if (!isAuthorized)
{
    <div class="unauthorized-container">
        <div class="unauthorized-card">
            <div class="unauthorized-icon">🚫</div>
            <h3>Access Denied</h3>
            <p>You don't have permission to access this page.</p>
            <button class="btn btn-primary" @onclick="RedirectToHome">Return to Home</button>
        </div>
    </div>
}
else
{
    <div class="announcements-management">
        <div class="header-bar">
            <button class="back-btn" @onclick="GoBack">← Back to Dashboard</button>
            <h2>📢 Announcements</h2>
        </div>

        <div class="announcements-container">
            <!-- Create Announcement Card -->
            <div class="create-announcement-card">
                <div class="card-header">
                    <h3>📝 Create New Announcement</h3>
                </div>
                <div class="card-content">
                    <form class="announcement-form" @onsubmit="CreateAnnouncement">
                        <div class="form-group">
                            <label for="courseSelect">Select Course *</label>
                            <select id="courseSelect" @bind="selectedCourseId" class="form-control" required>
                                <option value="0">-- Choose Course --</option>
                                @foreach (var course in assignedCourses)
                                {
                                    <option value="@course.Id">@course.Name</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="announcementTitle">Title *</label>
                            <input type="text" id="announcementTitle" @bind="newAnnouncement.Title"
                                   class="form-control" placeholder="Enter announcement title..." required
                                   maxlength="200" />
                            <small class="field-note">@(newAnnouncement.Title?.Length ?? 0) / 200 characters</small>
                        </div>

                        <div class="form-group">
                            <label for="announcementContent">Content *</label>
                            <textarea id="announcementContent" @bind="newAnnouncement.Content"
                                      class="form-control" rows="6"
                                      placeholder="Write your announcement content here..." required
                                      maxlength="2000"></textarea>
                            <small class="field-note">@(newAnnouncement.Content?.Length ?? 0) / 2000 characters</small>
                        </div>

                        <div class="form-group">
                            <label for="announcementPriority">Priority</label>
                            <select id="announcementPriority" @bind="newAnnouncement.Priority" class="form-control">
                                <option value="Normal">📋 Normal</option>
                                <option value="Important">⚠️ Important</option>
                                <option value="Urgent">🚨 Urgent</option>
                            </select>
                        </div>

                        <div class="form-actions">
                            <button type="button" class="btn btn-outline" @onclick="ResetForm">
                                🗑️ Clear
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@isCreatingAnnouncement">
                                @if (isCreatingAnnouncement)
                                {
                                    <span>📤 Publishing...</span>
                                }
                                else
                                {
                                    <span>📤 Publish Announcement</span>
                                }
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Previous Announcements -->
            <div class="announcements-list-card">
                <div class="card-header">
                    <h3>📜 Previous Announcements</h3>
                    <div class="filter-controls">
                        <select @bind="filterCourseId" class="form-control-sm">
                            <option value="0">All Courses</option>
                            @foreach (var course in assignedCourses)
                            {
                                <option value="@course.Id">@course.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="card-content">
                    @if (announcements.Any())
                    {
                        <div class="announcements-list">
                            @foreach (var announcement in filteredAnnouncements)
                            {
                                <div class="announcement-item @announcement.Priority.ToLower()">
                                    <div class="announcement-header">
                                        <div class="announcement-title-section">
                                            <h4 class="announcement-title">@announcement.Title</h4>
                                            <span class="announcement-priority @announcement.Priority.ToLower()">
                                                @GetPriorityIcon(announcement.Priority) @announcement.Priority
                                            </span>
                                        </div>
                                        <div class="announcement-meta">
                                            <span class="course-name">@announcement.Course?.Name</span>
                                            <span class="announcement-date">@announcement.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")</span>
                                        </div>
                                    </div>
                                    <div class="announcement-content">
                                        @announcement.Content
                                    </div>
                                    <div class="announcement-footer">
                                        <div class="announcement-stats">
                                            <span class="stat">👥 Sent to @(GetEnrolledStudentsCount(announcement.CourseId)) students</span>
                                        </div>
                                        <button class="btn btn-outline btn-sm" @onclick="() => DeleteAnnouncement(announcement.Id)">
                                            🗑️ Delete
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="no-announcements">
                            <p>No announcements created yet. Create your first announcement above!</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Inject]
    private NavigationManager Navigation { get; set; } = default!;

    private bool isAuthChecked = false;
    private bool isAuthorized = false;
    private bool isLoading = true;
    private bool isCreatingAnnouncement = false;

    // Data
    private List<Course> assignedCourses = new();
    private List<Announcement> announcements = new();
    private List<Enrollment> enrollments = new();

    // Form state
    private int selectedCourseId = 0;
    private int filterCourseId = 0;
    private NewAnnouncement newAnnouncement = new();

    protected override async Task OnInitializedAsync()
    {
        await CheckAuthorization();
        if (isAuthorized)
        {
            await LoadAssignedCourses();
            await LoadAnnouncements();
            await LoadEnrollments();
        }
    }

    private async Task CheckAuthorization()
    {
        for (int i = 0; i < 20; i++)
        {
            if (AuthStateService.CurrentUser != null)
                break;
            await Task.Delay(100);
        }

        var user = AuthStateService.CurrentUser;
        isAuthorized = user != null && (user.Role == "Professor" || user.Role == "Teacher");
        isAuthChecked = true;
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadAssignedCourses()
    {
        try
        {
            var currentUser = AuthStateService.CurrentUser;
            if (currentUser == null) return;

            assignedCourses = await Context.Courses
                .Where(c => c.ProfessorId == currentUser.Id)
                .OrderBy(c => c.Name)
                .ToListAsync();

            isLoading = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading courses: {ex.Message}");
            isLoading = false;
        }
    }

    private async Task LoadAnnouncements()
    {
        try
        {
            var currentUser = AuthStateService.CurrentUser;
            if (currentUser == null) return;

            announcements = await Context.Announcements
                .Where(a => a.ProfessorId == currentUser.Id)
                .Include(a => a.Course)
                .OrderByDescending(a => a.CreatedAt)
                .ToListAsync();

            StateHasChanged();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading announcements: {ex.Message}");
        }
    }

    private async Task LoadEnrollments()
    {
        try
        {
            enrollments = await Context.Enrollments
                .Include(e => e.Course)
                .ToListAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading enrollments: {ex.Message}");
        }
    }

    private async Task CreateAnnouncement()
    {
        try
        {
            if (selectedCourseId == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Please select a course.");
                return;
            }

            if (string.IsNullOrWhiteSpace(newAnnouncement.Title) || string.IsNullOrWhiteSpace(newAnnouncement.Content))
            {
                await JSRuntime.InvokeVoidAsync("alert", "Please fill in all required fields.");
                return;
            }

            isCreatingAnnouncement = true;
            StateHasChanged();

            var currentUser = AuthStateService.CurrentUser;
            if (currentUser == null) return;

            var announcement = new Announcement
            {
                ProfessorId = currentUser.Id,
                CourseId = selectedCourseId,
                Title = newAnnouncement.Title.Trim(),
                Content = newAnnouncement.Content.Trim(),
                Priority = newAnnouncement.Priority,
                CreatedAt = DateTime.Now
            };

            Context.Announcements.Add(announcement);
            await Context.SaveChangesAsync();

            // Reload announcements to include the new one
            await LoadAnnouncements();
            ResetForm();

            await JSRuntime.InvokeVoidAsync("alert", "Announcement published successfully! All enrolled students will see this announcement.");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error creating announcement: {ex.Message}");
        }
        finally
        {
            isCreatingAnnouncement = false;
            StateHasChanged();
        }
    }

    private async Task DeleteAnnouncement(int announcementId)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this announcement? This action cannot be undone.");

        if (confirmed)
        {
            try
            {
                var announcement = await Context.Announcements.FindAsync(announcementId);
                if (announcement != null)
                {
                    Context.Announcements.Remove(announcement);
                    await Context.SaveChangesAsync();

                    // Reload announcements
                    await LoadAnnouncements();
                    await JSRuntime.InvokeVoidAsync("alert", "Announcement deleted successfully!");
                }
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error deleting announcement: {ex.Message}");
            }
        }
    }

    private void ResetForm()
    {
        newAnnouncement = new NewAnnouncement();
        selectedCourseId = 0;
        StateHasChanged();
    }

    private int GetEnrolledStudentsCount(int courseId)
    {
        return enrollments.Count(e => e.CourseId == courseId);
    }

    private string GetPriorityIcon(string priority)
    {
        return priority switch
        {
            "Urgent" => "🚨",
            "Important" => "⚠️",
            _ => "📋"
        };
    }

    private List<Announcement> filteredAnnouncements =>
        filterCourseId == 0
            ? announcements
            : announcements.Where(a => a.CourseId == filterCourseId).ToList();

    private void GoBack() => Navigation.NavigateTo("/profhome");
    private void RedirectToHome() => Navigation.NavigateTo("/");

    // Model Classes
    public class NewAnnouncement
    {
        public string Title { get; set; } = "";
        public string Content { get; set; } = "";
        public string Priority { get; set; } = "Normal";
    }
}
