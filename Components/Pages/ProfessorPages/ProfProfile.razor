@page "/profprofile"
@inject AuthStateService AuthStateService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject Data.AppDbContext Context
@using Thesis.Models
@using Microsoft.AspNetCore.Components.Forms

<PageTitle>Thesis - Professor Profile</PageTitle>

@if (!isAuthChecked)
{
    <div class="loading-container">
        <div class="spinner"></div>
        <p>Loading Profile...</p>
    </div>
}
else if (!isAuthorized)
{
    <div class="unauthorized-container">
        <div class="unauthorized-card">
            <div class="unauthorized-icon">🚫</div>
            <h3>Access Denied</h3>
            <p>You don't have permission to access this page.</p>
            <button class="btn btn-primary" @onclick="RedirectToHome">Return to Home</button>
        </div>
    </div>
}
else
{
    <div class="prof-profile">
        <div class="header-bar">
            <button class="back-btn" @onclick="GoBack">← Back to Dashboard</button>
            <h2>👤 Professor Profile</h2>
        </div>

        <div class="profile-container">
            <!-- Left Column - Profile Info & Courses -->
            <div class="profile-left">
                <!-- Profile Picture Section -->
                <div class="profile-card">
                    <div class="card-header">
                        <h3>Profile Picture</h3>
                    </div>
                    <div class="card-content">
                        <div class="avatar-section">
                            <div class="avatar-container">
                                <img src="@GetProfileImageUrl()"
                                     alt="Profile" class="profile-avatar" />
                                <div class="avatar-overlay" @onclick="TriggerFileInput">
                                    <span class="camera-icon">📷</span>
                                    <span>Change Photo</span>
                                </div>
                            </div>
                            <InputFile id="avatarInput"
                                       accept="image/*"
                                       style="display: none;"
                                       OnChange="HandleAvatarUpload" />

                            <div class="avatar-actions">
                                <button class="btn btn-outline btn-sm" @onclick="TriggerFileInput">
                                    📤 Upload New
                                </button>
                                <button class="btn btn-outline btn-sm" @onclick="UseDefaultAvatar" style="margin-left: 8px;">
                                    🗑️ Remove Photo
                                </button>
                            </div>

                            @if (isUploading)
                            {
                                <div class="upload-progress">
                                    <div class="progress-bar">
                                        <div class="progress-fill" style="width: @uploadProgress%"></div>
                                    </div>
                                    <span>Uploading... @uploadProgress%</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Assigned Courses Section -->
                <div class="profile-card">
                    <div class="card-header">
                        <h3>📚 Assigned Courses</h3>
                    </div>
                    <div class="card-content">
                        @if (assignedCourses.Any())
                        {
                            <div class="courses-list">
                                @foreach (var course in assignedCourses)
                                {
                                    <div class="course-item">
                                        <div class="course-info">
                                            <h4 class="course-title">@course.Name</h4>
                                            <p class="course-description">@course.Description</p>
                                            <div class="course-meta">
                                                <span class="course-difficulty">Difficulty: @course.DifficultyRating.ToString("F1")/5.0</span>
                                                <span class="course-method">Grading: @course.Method</span>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="no-courses">
                                <p>No courses assigned yet.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Right Column - Editable Profile Info & Ratings -->
            <div class="profile-right">
                <!-- Personal Information -->
                <div class="profile-card">
                    <div class="card-header">
                        <h3>Personal Information</h3>
                        <button class="btn btn-outline" @onclick="ToggleEditMode">
                            @if (isEditing)
                            {
                                <span>💾 Save Changes</span>
                            }
                            else
                            {
                                <span>✏️ Edit Profile</span>
                            }
                        </button>
                    </div>
                    <div class="card-content">
                        <form class="profile-form">
                            <div class="form-row">
                                <div class="form-group">
                                    <label>First Name</label>
                                    @if (isEditing)
                                    {
                                        <input type="text" @bind="profile.Name" class="form-control" />
                                    }
                                    else
                                    {
                                        <div class="read-only-field">@profile.Name</div>
                                    }
                                </div>
                                <div class="form-group">
                                    <label>Last Name</label>
                                    @if (isEditing)
                                    {
                                        <input type="text" @bind="profile.LastName" class="form-control" />
                                    }
                                    else
                                    {
                                        <div class="read-only-field">@profile.LastName</div>
                                    }
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Email Address</label>
                                @if (isEditing)
                                {
                                    <input type="email" @bind="profile.Email" class="form-control" />
                                }
                                else
                                {
                                    <div class="read-only-field">@profile.Email</div>
                                }
                            </div>

                            <div class="form-group">
                                <label>Academic ID</label>
                                <div class="read-only-field">@profile.AcademicId</div>
                                <small class="field-note">Academic ID cannot be changed</small>
                            </div>

                            <div class="form-group">
                                <label>Professional Bio</label>
                                @if (isEditing)
                                {
                                    <textarea @bind="profile.Bio" class="form-control" rows="4"
                                              placeholder="Tell students about your teaching philosophy, experience, and interests..."></textarea>
                                    <small class="field-note">@(profile.Bio?.Length ?? 0) / 500 characters</small>
                                }
                                else
                                {
                                    <div class="read-only-field bio-text">
                                        @if (string.IsNullOrEmpty(profile.Bio))
                                        {
                                            <span class="placeholder-text">No bio added yet. Click Edit Profile to add one.</span>
                                        }
                                        else
                                        {
                                            @profile.Bio
                                        }
                                    </div>
                                }
                            </div>

                            <div class="form-group">
                                <label>Department/Field</label>
                                @if (isEditing)
                                {
                                    <input type="text" @bind="profile.Department" class="form-control" placeholder="e.g., Computer Science, Mathematics" />
                                }
                                else
                                {
                                    <div class="read-only-field">
                                        @if (string.IsNullOrEmpty(profile.Department))
                                        {
                                            <span class="placeholder-text">Not specified</span>
                                        }
                                        else
                                        {
                                            @profile.Department
                                        }
                                    </div>
                                }
                            </div>

                            <div class="form-group">
                                <label>Office Location</label>
                                @if (isEditing)
                                {
                                    <input type="text" @bind="profile.OfficeLocation" class="form-control" placeholder="e.g., Building A, Room 301" />
                                }
                                else
                                {
                                    <div class="read-only-field">
                                        @if (string.IsNullOrEmpty(profile.OfficeLocation))
                                        {
                                            <span class="placeholder-text">Not specified</span>
                                        }
                                        else
                                        {
                                            @profile.OfficeLocation
                                        }
                                    </div>
                                }
                            </div>

                            <div class="form-group">
                                <label>Office Hours</label>
                                @if (isEditing)
                                {
                                    <textarea @bind="profile.OfficeHours" class="form-control" rows="2"
                                              placeholder="e.g., Monday-Wednesday 2:00 PM - 4:00 PM"></textarea>
                                }
                                else
                                {
                                    <div class="read-only-field">
                                        @if (string.IsNullOrEmpty(profile.OfficeHours))
                                        {
                                            <span class="placeholder-text">Not specified</span>
                                        }
                                        else
                                        {
                                            @profile.OfficeHours
                                        }
                                    </div>
                                }
                            </div>
                        </form>

                        @if (isEditing)
                        {
                            <div class="form-actions">
                                <button class="btn btn-outline" @onclick="CancelEditing">
                                    ❌ Cancel
                                </button>
                                <button class="btn btn-primary" @onclick="SaveProfile" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span>Saving...</span>
                                    }
                                    else
                                    {
                                        <span>💾 Save Changes</span>
                                    }
                                </button>
                            </div>
                        }
                    </div>
                </div>

                <!-- Teacher Rating Section -->
                <div class="profile-card">
                    <div class="card-header">
                        <h3>👑 Teacher Rating</h3>
                    </div>
                    <div class="card-content">
                        <div class="rating-section">
                            <div class="rating-overview">
                                <div class="rating-score">
                                    <span class="score">@averageRating.ToString("F1")</span>
                                    <span class="out-of">/ 5.0</span>
                                </div>
                                <div class="rating-stars">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <span class="star @(i <= Math.Floor(averageRating) ? "filled" : i <= averageRating ? "half-filled" : "")">
                                            @if (i <= Math.Floor(averageRating))
                                            {
                                                <text>★</text>
                                            }
                                            else if (i <= averageRating)
                                            {
                                                <span class="half-star">★</span>
                                            }
                                            else
                                            {
                                                <text>☆</text>
                                            }
                                        </span>
                                    }
                                </div>
                                <div class="rating-count">Based on @totalRatings student ratings</div>
                            </div>

                            <!-- Rating Breakdown -->
                            @if (ratingBreakdown.Any(r => r.Count > 0))
                            {
                                <div class="rating-breakdown">
                                    <h4>Rating Breakdown</h4>
                                    @foreach (var breakdown in ratingBreakdown.OrderByDescending(r => r.Rating))
                                    {
                                        <div class="breakdown-item">
                                            <span class="breakdown-stars">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    <span class="star @(i <= breakdown.Rating ? "filled" : "")">
                                                        @if (i <= breakdown.Rating)
                                                        {
                                                            <text>★</text>
                                                        }
                                                        else
                                                        {
                                                            <text>☆</text>
                                                        }
                                                    </span>
                                                }
                                            </span>
                                            <div class="breakdown-bar">
                                                <div class="bar-fill" style="width: @(breakdown.Percentage)%;"></div>
                                            </div>
                                            <span class="breakdown-count">@breakdown.Count</span>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="profile-card">
                    <div class="card-header">
                        <h3>📞 Contact Information</h3>
                    </div>
                    <div class="card-content">
                        <div class="contact-info">
                            <div class="contact-item">
                                <span class="contact-label">Phone:</span>
                                @if (isEditing)
                                {
                                    <input type="tel" @bind="profile.PhoneNumber" class="form-control" />
                                }
                                else
                                {
                                    <span class="contact-value">
                                        @if (string.IsNullOrEmpty(profile.PhoneNumber))
                                        {
                                            <span class="placeholder-text">Not provided</span>
                                        }
                                        else
                                        {
                                            @profile.PhoneNumber
                                        }
                                    </span>
                                }
                            </div>

                            <div class="contact-item">
                                <span class="contact-label">Website:</span>
                                @if (isEditing)
                                {
                                    <input type="url" @bind="profile.Website" class="form-control" placeholder="https://..." />
                                }
                                else
                                {
                                    <span class="contact-value">
                                        @if (string.IsNullOrEmpty(profile.Website))
                                        {
                                            <span class="placeholder-text">Not provided</span>
                                        }
                                        else
                                        {
                                            <a href="@profile.Website" target="_blank">@profile.Website</a>
                                        }
                                    </span>
                                }
                            </div>

                            <div class="contact-item">
                                <span class="contact-label">LinkedIn:</span>
                                @if (isEditing)
                                {
                                    <input type="url" @bind="profile.LinkedIn" class="form-control" placeholder="https://linkedin.com/in/..." />
                                }
                                else
                                {
                                    <span class="contact-value">
                                        @if (string.IsNullOrEmpty(profile.LinkedIn))
                                        {
                                            <span class="placeholder-text">Not provided</span>
                                        }
                                        else
                                        {
                                            <a href="@profile.LinkedIn" target="_blank">View Profile</a>
                                        }
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Student Comments Section -->
                @if (allComments.Any())
                {
                    <div class="profile-card">
                        <div class="card-header">
                            <h3>💬 Student Comments (@allComments.Count)</h3>
                        </div>
                        <div class="card-content">
                            <div class="comments-list">
                                @foreach (var comment in allComments)
                                {
                                    <div class="comment-item detailed">
                                        <div class="comment-header">
                                            <div class="comment-meta">
                                                <span class="student-name">@comment.StudentName</span>
                                                <span class="comment-date">@comment.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")</span>
                                            </div>
                                        </div>
                                        <p class="comment-text">"@comment.CommentText"</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

@code {
    private bool isAuthChecked = false;
    private bool isAuthorized = false;
    private bool isLoading = true;
    private bool isEditing = false;
    private bool isSaving = false;
    private bool isUploading = false;
    private int uploadProgress = 0;
    private const long MAX_FILE_SIZE = 2 * 1024 * 1024; // 2MB

    // Profile data
    private ProfessorProfile profile = new();
    private ProfessorProfile originalProfile = new();

    // Comment data
    private List<StudentComment> recentComments = new();
    private List<StudentComment> allComments = new();
    private int totalComments = 0;
    private int uniqueStudentsCount = 0;

    // Rating data
    private double averageRating = 0.0;
    private int totalRatings = 0;
    private List<RatingBreakdown> ratingBreakdown = new();

    // Course data
    private List<Thesis.Models.Course> assignedCourses = new();

    protected override async Task OnInitializedAsync()
    {
        await CheckAuthorization();
        if (isAuthorized)
        {
            await LoadProfileData();
            await LoadProfessorRatings();
            await LoadCommentsData();
            await LoadAssignedCourses();
        }
    }

    private async Task CheckAuthorization()
    {
        for (int i = 0; i < 20; i++)
        {
            if (AuthStateService.CurrentUser != null)
                break;
            await Task.Delay(100);
        }

        var user = AuthStateService.CurrentUser;
        isAuthorized = user != null && (user.Role == "Professor" || user.Role == "Teacher" || user.Role == "Admin");
        isAuthChecked = true;
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadProfileData()
    {
        try
        {
            var currentUser = AuthStateService.CurrentUser;
            if (currentUser == null) return;

            // Load basic user info
            profile = new ProfessorProfile
            {
                Id = currentUser.Id,
                Name = currentUser.Name,
                LastName = currentUser.LastName,
                Email = currentUser.Email,
                AcademicId = currentUser.AcademicId,
                Role = currentUser.Role
            };

            // Try to load extended profile from database
            var extendedProfile = await Context.ProfessorProfiles
                .FirstOrDefaultAsync(p => p.UserId == currentUser.Id);

            if (extendedProfile != null)
            {
                profile.ProfilePicture = extendedProfile.ProfilePicture;
                profile.Bio = extendedProfile.Bio;
                profile.Department = extendedProfile.Department;
                profile.OfficeLocation = extendedProfile.OfficeLocation;
                profile.OfficeHours = extendedProfile.OfficeHours;
                profile.PhoneNumber = extendedProfile.PhoneNumber;
                profile.Website = extendedProfile.Website;
                profile.LinkedIn = extendedProfile.LinkedIn;
            }

            originalProfile = new ProfessorProfile
            {
                Id = profile.Id,
                Name = profile.Name,
                LastName = profile.LastName,
                Email = profile.Email,
                AcademicId = profile.AcademicId,
                Role = profile.Role,
                ProfilePicture = profile.ProfilePicture,
                Bio = profile.Bio,
                Department = profile.Department,
                OfficeLocation = profile.OfficeLocation,
                OfficeHours = profile.OfficeHours,
                PhoneNumber = profile.PhoneNumber,
                Website = profile.Website,
                LinkedIn = profile.LinkedIn
            };

            isLoading = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading profile: {ex.Message}");
            isLoading = false;
        }
    }

    private async Task LoadProfessorRatings()
    {
        try
        {
            var currentUser = AuthStateService.CurrentUser;
            if (currentUser == null) return;

            // Load ratings for this professor
            var ratings = await Context.ProfessorRatings
                .Where(r => r.ProfessorId == currentUser.Id)
                .ToListAsync();

            totalRatings = ratings.Count;
            averageRating = totalRatings > 0 ? ratings.Average(r => r.Rating) : 0.0;

            // Calculate rating breakdown
            ratingBreakdown = Enumerable.Range(1, 5)
                .Select(r => new RatingBreakdown
                {
                    Rating = r,
                    Count = ratings.Count(rt => rt.Rating == r),
                    Percentage = totalRatings > 0 ? (ratings.Count(rt => rt.Rating == r) * 100.0 / totalRatings) : 0
                })
                .ToList();

            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading professor ratings: {ex.Message}");
            // If ProfessorRatings table doesn't exist yet, initialize with zeros
            totalRatings = 0;
            averageRating = 0.0;
            ratingBreakdown = new List<RatingBreakdown>();
        }
    }

    private async Task LoadCommentsData()
    {
        try
        {
            var currentUser = AuthStateService.CurrentUser;
            if (currentUser == null) return;

            // Load comments for this professor
            var comments = await Context.Comments
                .Where(c => c.ProfessorId == currentUser.Id && c.IsApproved)
                .Include(c => c.Student)
                .OrderByDescending(c => c.CreatedAt)
                .ToListAsync();

            totalComments = comments.Count;
            uniqueStudentsCount = comments.Select(c => c.StudentId).Distinct().Count();

            // Convert to view model
            recentComments = comments.Take(3).Select(c => new StudentComment
            {
                Id = c.Id,
                StudentName = $"{c.Student?.Name} {c.Student?.LastName}",
                CommentText = c.CommentText,
                CreatedAt = c.CreatedAt
            }).ToList();

            allComments = comments.Select(c => new StudentComment
            {
                Id = c.Id,
                StudentName = $"{c.Student?.Name} {c.Student?.LastName}",
                CommentText = c.CommentText,
                CreatedAt = c.CreatedAt
            }).ToList();

            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading comments data: {ex.Message}");
        }
    }

    private async Task LoadAssignedCourses()
    {
        try
        {
            var currentUser = AuthStateService.CurrentUser;
            if (currentUser == null) return;

            // Load courses assigned to this professor
            assignedCourses = await Context.Courses
                .Where(c => c.ProfessorId == currentUser.Id)
                .OrderBy(c => c.Name)
                .ToListAsync();

            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading assigned courses: {ex.Message}");
        }
    }

    private void ToggleEditMode()
    {
        if (isEditing)
        {
            SaveProfile();
        }
        else
        {
            StartEditing();
        }
    }

    private void StartEditing()
    {
        isEditing = true;
        StateHasChanged();
    }

    private void CancelEditing()
    {
        isEditing = false;
        profile = new ProfessorProfile
        {
            Id = originalProfile.Id,
            Name = originalProfile.Name,
            LastName = originalProfile.LastName,
            Email = originalProfile.Email,
            AcademicId = originalProfile.AcademicId,
            Role = originalProfile.Role,
            ProfilePicture = originalProfile.ProfilePicture,
            Bio = originalProfile.Bio,
            Department = originalProfile.Department,
            OfficeLocation = originalProfile.OfficeLocation,
            OfficeHours = originalProfile.OfficeHours,
            PhoneNumber = originalProfile.PhoneNumber,
            Website = originalProfile.Website,
            LinkedIn = originalProfile.LinkedIn
        };
        StateHasChanged();
    }

    private async Task SaveProfile()
    {
        try
        {
            isSaving = true;
            StateHasChanged();

            // Validate required fields
            if (string.IsNullOrEmpty(profile.Name) || string.IsNullOrEmpty(profile.Email))
            {
                await JSRuntime.InvokeVoidAsync("alert", "Name and Email are required fields.");
                return;
            }

            var currentUser = AuthStateService.CurrentUser;
            if (currentUser == null) return;

            // Update basic user information
            var user = await Context.Users.FindAsync(currentUser.Id);
            if (user != null)
            {
                user.Name = profile.Name;
                user.LastName = profile.LastName;
                user.Email = profile.Email;
            }

            // Update or create extended profile
            var extendedProfile = await Context.ProfessorProfiles
                .FirstOrDefaultAsync(p => p.UserId == currentUser.Id);

            if (extendedProfile == null)
            {
                extendedProfile = new Thesis.Models.ProfessorProfileEntity
                {
                    UserId = currentUser.Id,
                    ProfilePicture = profile.ProfilePicture,
                    Bio = profile.Bio,
                    Department = profile.Department,
                    OfficeLocation = profile.OfficeLocation,
                    OfficeHours = profile.OfficeHours,
                    PhoneNumber = profile.PhoneNumber,
                    Website = profile.Website,
                    LinkedIn = profile.LinkedIn,
                    CreatedAt = DateTime.Now,
                    UpdatedAt = DateTime.Now
                };
                Context.ProfessorProfiles.Add(extendedProfile);
            }
            else
            {
                extendedProfile.ProfilePicture = profile.ProfilePicture;
                extendedProfile.Bio = profile.Bio;
                extendedProfile.Department = profile.Department;
                extendedProfile.OfficeLocation = profile.OfficeLocation;
                extendedProfile.OfficeHours = profile.OfficeHours;
                extendedProfile.PhoneNumber = profile.PhoneNumber;
                extendedProfile.Website = profile.Website;
                extendedProfile.LinkedIn = profile.LinkedIn;
                extendedProfile.UpdatedAt = DateTime.Now;
            }

            await Context.SaveChangesAsync();

            // Update the original profile
            originalProfile = new ProfessorProfile
            {
                Id = profile.Id,
                Name = profile.Name,
                LastName = profile.LastName,
                Email = profile.Email,
                AcademicId = profile.AcademicId,
                Role = profile.Role,
                ProfilePicture = profile.ProfilePicture,
                Bio = profile.Bio,
                Department = profile.Department,
                OfficeLocation = profile.OfficeLocation,
                OfficeHours = profile.OfficeHours,
                PhoneNumber = profile.PhoneNumber,
                Website = profile.Website,
                LinkedIn = profile.LinkedIn
            };

            isEditing = false;
            
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error saving profile: {ex.Message}");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private string GetProfileImageUrl()
    {
        if (string.IsNullOrEmpty(profile.ProfilePicture))
        {
            return "/images/default-avatar.png";
        }

        // If it's already a data URL, return as is
        if (profile.ProfilePicture.StartsWith("data:"))
        {
            return profile.ProfilePicture;
        }

        // If it's a relative path, ensure it starts with /
        if (!profile.ProfilePicture.StartsWith("/") && !profile.ProfilePicture.StartsWith("http"))
        {
            return "/" + profile.ProfilePicture;
        }

        return profile.ProfilePicture;
    }

    private async void TriggerFileInput()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("eval",
                "document.getElementById('avatarInput').click()");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error opening file dialog: {ex.Message}");
        }
    }

    private async Task HandleAvatarUpload(InputFileChangeEventArgs e)
    {
        try
        {
            var file = e.File;
            if (file == null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Please select a file.");
                return;
            }

            // Check file type
            if (!file.ContentType.StartsWith("image/"))
            {
                await JSRuntime.InvokeVoidAsync("alert", "Please select an image file (JPEG, PNG, etc.).");
                return;
            }

            // Check file size
            if (file.Size > MAX_FILE_SIZE)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Image size must be less than 2MB.");
                return;
            }

            isUploading = true;
            uploadProgress = 0;
            StateHasChanged();

            // Simulate progress
            await SimulateUploadProgress();

            // Read the file and convert to base64
            using var stream = file.OpenReadStream(MAX_FILE_SIZE);
            using var memoryStream = new MemoryStream();

            await stream.CopyToAsync(memoryStream);
            var imageBytes = memoryStream.ToArray();

            // Convert to base64 data URL
            var base64String = Convert.ToBase64String(imageBytes);
            var dataUrl = $"data:{file.ContentType};base64,{base64String}";

            // Update profile picture
            profile.ProfilePicture = dataUrl;

            // Auto-save the profile
            if (isEditing)
            {
                await SaveProfile();
            }
            else
            {
                // If not in edit mode, save just the profile picture
                await SaveProfilePictureOnly();
            }

            await JSRuntime.InvokeVoidAsync("alert", "Profile picture updated successfully!");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error uploading image: {ex.Message}");
        }
        finally
        {
            isUploading = false;
            uploadProgress = 0;
            StateHasChanged();
        }
    }

    private async Task SaveProfilePictureOnly()
    {
        try
        {
            var currentUser = AuthStateService.CurrentUser;
            if (currentUser == null) return;

            // Update profile picture in database
            var extendedProfile = await Context.ProfessorProfiles
                .FirstOrDefaultAsync(p => p.UserId == currentUser.Id);

            if (extendedProfile == null)
            {
                extendedProfile = new Thesis.Models.ProfessorProfileEntity
                {
