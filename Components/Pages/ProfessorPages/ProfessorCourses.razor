@page "/profcourse"
@inject AuthStateService AuthStateService
@inject IJSRuntime JSRuntime
@inject Data.AppDbContext Context
@using Thesis.Models
@using Microsoft.EntityFrameworkCore

<PageTitle>Thesis - Manage Courses</PageTitle>

@if (!isAuthChecked)
{
    <div class="loading-container">
        <div class="spinner"></div>
        <p>Loading Courses...</p>
    </div>
}
else if (!isAuthorized)
{
    <div class="unauthorized-container">
        <div class="unauthorized-card">
            <div class="unauthorized-icon">🚫</div>
            <h3>Access Denied</h3>
            <p>You don't have permission to access this page.</p>
            <button class="btn btn-primary" @onclick="RedirectToHome">Return to Home</button>
        </div>
    </div>
}
else
{
    <div class="professor-courses">
        <div class="header-bar">
            <button class="back-btn" @onclick="GoBack">← Back to Dashboard</button>
            <h2>📚 Manage My Courses</h2>
            <div class="header-stats">
                <span class="stat-badge">Total Courses: @myCourses.Count</span>
            </div>
        </div>

        <div class="courses-management">
            <!-- Course List -->
            <div class="courses-section">
                <div class="section-header">
                    <h3>🎯 My Courses</h3>
                    <div class="search-controls">
                        <input type="text" @bind="searchTerm" @oninput="OnSearch"
                               class="search-input" placeholder="Search courses..." />
                    </div>
                </div>

                <div class="courses-grid">
                    @foreach (var course in filteredCourses)
                    {
                        <div class="course-management-card">
                            <div class="course-header">
                                <h4 class="course-title">@course.Name</h4>
                                <div class="course-meta">
                                    <span class="course-code">ID: @course.Id</span>
                                    <span class="enrollment-count">👥 @GetEnrollmentCount(course.Id) students</span>
                                </div>
                            </div>

                            <div class="course-content">
                                <p class="course-description">@course.Description</p>

                                <!-- Difficulty Rating Management -->
                                <div class="management-section">
                                    <h5>📊 Difficulty Rating</h5>
                                    <div class="difficulty-management">
                                        <label class="management-label">Set Course Difficulty:</label>
                                        <div class="difficulty-stars-editable">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                int starValue = i;
                                                <span class="star @(i <= course.DifficultyRating ? "filled" : "")"
                                                      @onclick="() => UpdateCourseDifficulty(course.Id, starValue)"
                                                      title="Set difficulty to @starValue stars">
                                                    ★
                                                </span>
                                            }
                                        </div>
                                        <div class="difficulty-info">
                                            <span class="current-rating">Current: @course.DifficultyRating.ToString("F1")/5.0</span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Grading Method Management -->
                                <div class="management-section">
                                    <h5>📝 Grading Method</h5>
                                    <div class="grading-method-management">
                                        <label class="management-label">Select Grading Method:</label>
                                        <div class="grading-options">
                                            <label class="radio-option">
                                                <input type="radio" name="@($"grading-{course.Id}")"
                                                       value="0" @onchange="() => UpdateGradingMethod(course.Id, GradingMethod.Exam)"
                                                       checked="@(course.GradingMethod == GradingMethod.Exam)" />
                                                <span class="radio-label">
                                                    📄 Exam Only
                                                </span>
                                            </label>
                                            <label class="radio-option">
                                                <input type="radio" name="@($"grading-{course.Id}")"
                                                       value="1" @onchange="() => UpdateGradingMethod(course.Id, GradingMethod.Exercise)"
                                                       checked="@(course.GradingMethod == GradingMethod.Exercise)" />
                                                <span class="radio-label">
                                                    📝 Exercise Only
                                                </span>
                                            </label>
                                            <label class="radio-option">
                                                <input type="radio" name="@($"grading-{course.Id}")"
                                                       value="2" @onchange="() => UpdateGradingMethod(course.Id, GradingMethod.Both)"
                                                       checked="@(course.GradingMethod == GradingMethod.Both)" />
                                                <span class="radio-label">
                                                    📚 Both Exam & Exercise
                                                </span>
                                            </label>
                                        </div>
                                        <div class="current-method">
                                            Current: <strong>@GetGradingMethodText(course.GradingMethod)</strong>
                                        </div>
                                    </div>
                                </div>

                                <!-- Course Statistics -->
                                <div class="management-section">
                                    <h5>📈 Course Statistics</h5>
                                    <div class="course-stats-grid">
                                        <div class="stat-item">
                                            <span class="stat-label">Total Enrollments:</span>
                                            <span class="stat-value">@GetEnrollmentCount(course.Id)</span>
                                        </div>
                                        <div class="stat-item">
                                            <span class="stat-label">Average Grade:</span>
                                            <span class="stat-value">@GetAverageGrade(course.Id).ToString("F1")/10.0</span>
                                        </div>
                                        <div class="stat-item">
                                            <span class="stat-label">Announcements:</span>
                                            <span class="stat-value">@GetAnnouncementCount(course.Id)</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (!filteredCourses.Any())
                    {
                        <div class="no-courses">
                            <p>No courses found matching your criteria.</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Stats Sidebar -->
            <div class="stats-sidebar">
                <div class="stats-card">
                    <h4>📊 Overview</h4>
                    <div class="stats-list">
                        <div class="stat-overview">
                            <span class="stat-icon">📚</span>
                            <div class="stat-info">
                                <span class="stat-title">Total Courses</span>
                                <span class="stat-value">@myCourses.Count</span>
                            </div>
                        </div>
                        <div class="stat-overview">
                            <span class="stat-icon">👥</span>
                            <div class="stat-info">
                                <span class="stat-title">Total Students</span>
                                <span class="stat-value">@totalStudents</span>
                            </div>
                        </div>
                        <div class="stat-overview">
                            <span class="stat-icon">📝</span>
                            <div class="stat-info">
                                <span class="stat-title">Avg Grade</span>
                                <span class="stat-value">@averageGrade.ToString("F1")/10.0</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Inject]
    private NavigationManager Navigation { get; set; } = default!;

    private bool isAuthChecked = false;
    private bool isAuthorized = false;
    private bool isLoading = true;

    // Data
    private List<Course> myCourses = new();
    private List<Enrollment> courseEnrollments = new();
    private List<Grade> courseGrades = new();
    private List<Announcement> courseAnnouncements = new();

    // Statistics
    private int totalStudents = 0;
    private double averageGrade = 0;

    // UI State
    private string searchTerm = "";

    protected override async Task OnInitializedAsync()
    {
        await CheckAuthorization();
        if (isAuthorized)
        {
            await LoadData();
        }
    }

    private async Task CheckAuthorization()
    {
        for (int i = 0; i < 20; i++)
        {
            if (AuthStateService.CurrentUser != null)
                break;
            await Task.Delay(100);
        }

        var user = AuthStateService.CurrentUser;
        isAuthorized = user != null && user.Role == "Teacher";
        isAuthChecked = true;
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadData()
    {
        try
        {
            var currentUser = AuthStateService.CurrentUser;
            if (currentUser == null) return;

            // Load professor's courses
            myCourses = await Context.Courses
                .Where(c => c.ProfessorId == currentUser.Id)
                .OrderBy(c => c.Name)
                .ToListAsync();

            // Load enrollments for statistics
            courseEnrollments = await Context.Enrollments
                .Include(e => e.Course)
                .Where(e => myCourses.Select(c => c.Id).Contains(e.CourseId))
                .ToListAsync();

            // Load grades for statistics
            courseGrades = await Context.Grades
                .Where(g => myCourses.Select(c => c.Id).Contains(g.CourseId))
                .ToListAsync();

            // Load announcements for statistics
            courseAnnouncements = await Context.Announcements
                .Where(a => a.ProfessorId == currentUser.Id)
                .ToListAsync();

            // Calculate statistics
            CalculateStatistics();

            isLoading = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading data: {ex.Message}");
            isLoading = false;
        }
    }

    private void CalculateStatistics()
    {
        totalStudents = courseEnrollments.Select(e => e.StudentId).Distinct().Count();
        averageGrade = courseGrades.Any() ? courseGrades.Average(g => g.GradeValue) : 0;
    }

    private async Task UpdateCourseDifficulty(int courseId, int difficulty)
    {
        try
        {
            var course = myCourses.FirstOrDefault(c => c.Id == courseId);
            if (course != null)
            {
                course.DifficultyRating = difficulty;
                Context.Courses.Update(course);
                await Context.SaveChangesAsync();
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error updating difficulty: {ex.Message}");
        }
    }

    private async Task UpdateGradingMethod(int courseId, GradingMethod method)
    {
        try
        {
            var course = myCourses.FirstOrDefault(c => c.Id == courseId);
            if (course != null)
            {
                course.GradingMethod = method;
                Context.Courses.Update(course);
                await Context.SaveChangesAsync();
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error updating grading method: {ex.Message}");
        }
    }

    private string GetGradingMethodText(GradingMethod? method)
    {
        if (!method.HasValue)
            return "Not Set";

        return method.Value switch
        {
            GradingMethod.Exam => "Exam Only",
            GradingMethod.Exercise => "Exercise Only",
            GradingMethod.Both => "Both Exam & Exercise",
            _ => "Not Set"
        };
    }

    private int GetEnrollmentCount(int courseId)
    {
        return courseEnrollments.Count(e => e.CourseId == courseId);
    }

    private double GetAverageGrade(int courseId)
    {
        var grades = courseGrades.Where(g => g.CourseId == courseId).ToList();
        return grades.Any() ? grades.Average(g => g.GradeValue) : 0;
    }

    private int GetAnnouncementCount(int courseId)
    {
        return courseAnnouncements.Count(a => a.CourseId == courseId);
    }

    private void OnSearch(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? "";
        StateHasChanged();
    }

    // Filtered data
    private List<Course> filteredCourses => myCourses
        .Where(c =>
            string.IsNullOrEmpty(searchTerm) ||
            c.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
            c.Description.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
        )
        .ToList();

    private void GoBack() => Navigation.NavigateTo("/profhome");
    private void RedirectToHome() => Navigation.NavigateTo("/");
}
