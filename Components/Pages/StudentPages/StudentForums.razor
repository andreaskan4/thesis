@page "/studentforum"
@using Thesis.Components.Layout
@layout MainLayout
@inject AuthStateService AuthStateService
@inject NavigationManager Navigation
@inject Data.AppDbContext Context
@inject IJSRuntime JSRuntime
@using Thesis.Models
@using Microsoft.EntityFrameworkCore

<PageTitle>Gnosis - Student Forum</PageTitle>

@if (!isAuthChecked)
{
    <div class="loading-container">
        <div class="spinner"></div>
        <p>Loading Forum...</p>
    </div>
}
else if (!isAuthorized)
{
    <div class="unauthorized-container">
        <div class="unauthorized-card">
            <div class="unauthorized-icon">🚫</div>
            <h3>Access Denied</h3>
            <p>You don't have permission to access the forum.</p>
            <button class="btn btn-primary" @onclick="RedirectToHome">Return to Home</button>
        </div>
    </div>
}
else
{
    <div class="student-forum">
        <!-- Header -->
        <div class="header-bar">
            <button class="back-btn" @onclick="GoBack">← Back to Dashboard</button>
            <h2>💬 Student Forum</h2>
            <div class="header-actions">
                <button class="btn btn-primary" @onclick="ShowNewQuestionModal">
                    📝 Ask Question
                </button>
                <div class="forum-stats">
                    <span class="stat-item">Questions: @questions.Count</span>
                    <span class="stat-item">Answers: @totalAnswers</span>
                    <span class="stat-item">My Questions: @myQuestionsCount</span>
                </div>
            </div>
        </div>

        <div class="forum-container">
            @if (isLoading)
            {
                <div class="loading">Loading forum questions...</div>
            }
            else
            {
                <div class="forum-content">
                    <!-- Search and Filter -->
                    <div class="forum-controls">
                        <div class="search-box">
                            <input type="text" @bind="searchTerm" @oninput="OnSearch" placeholder="Search questions..." class="search-input" />
                        </div>
                        <div class="filter-buttons">
                            <button class="filter-btn @(activeFilter == "all" ? "active" : "")" @onclick='() => SetFilter("all")'>
                                All Questions (@questions.Count)
                            </button>
                            <button class="filter-btn @(activeFilter == "my" ? "active" : "")" @onclick='() => SetFilter("my")'>
                                My Questions (@myQuestionsCount)
                            </button>
                            <button class="filter-btn @(activeFilter == "unanswered" ? "active" : "")" @onclick='() => SetFilter("unanswered")'>
                                Unanswered (@unansweredCount)
                            </button>
                            <button class="filter-btn @(activeFilter == "answered" ? "active" : "")" @onclick='() => SetFilter("answered")'>
                                Answered (@answeredCount)
                            </button>
                        </div>
                    </div>

                    <!-- Questions List -->
                    <div class="questions-list">
                        @if (filteredQuestions.Any())
                        {
                            @foreach (var question in filteredQuestions)
                            {
                                <div class="question-card">
                                    <div class="question-header">
                                        <div class="question-meta">
                                            <div class="user-avatar">
                                                @GetUserAvatar(question.Student)
                                            </div>
                                            <div class="user-info">
                                                <div class="user-name">@question.Student?.Name</div>
                                                <div class="post-time">@FormatTime(question.CreatedAt)</div>
                                            </div>
                                        </div>
                                        <div class="question-actions">
                                            @if (question.StudentId == currentUser?.Id)
                                            {
                                                <button class="btn-icon" @onclick="() => EditQuestion(question)" title="Edit question">
                                                    ✏️
                                                </button>
                                                <button class="btn-icon" @onclick="() => DeleteQuestion(question)" title="Delete question">
                                                    🗑️
                                                </button>
                                            }
                                        </div>
                                    </div>

                                    <div class="question-content">
                                        <h3 class="question-title">@question.Title</h3>
                                        <div class="question-text">@question.Content</div>

                                        @if (!string.IsNullOrEmpty(question.AttachmentPath))
                                        {
                                            <div class="question-attachment">
                                                <span class="attachment-icon">📎</span>
                                                <a href="@question.AttachmentPath" target="_blank" class="attachment-link">
                                                    @GetFileName(question.AttachmentPath)
                                                </a>
                                            </div>
                                        }
                                    </div>

                                    <div class="question-footer">
                                        <div class="question-stats">
                                            <span class="stat">💬 @question.Answers.Count answers</span>
                                            <span class="stat">👁️ @question.ViewCount views</span>
                                            <span class="stat">👍 @question.Likes likes</span>
                                        </div>
                                        <div class="question-tags">
                                            @foreach (var tag in question.TagsList)
                                            {
                                                <span class="tag">@tag</span>
                                            }
                                        </div>
                                    </div>

                                    <!-- Answers Section -->
                                    <div class="answers-section">
                                        <div class="answers-header">
                                            <h4>Answers (@question.Answers.Count)</h4>
                                            <button class="btn btn-outline btn-sm" @onclick="() => ToggleAnswerForm(question.Id)">
                                                ✍️ Add Answer
                                            </button>
                                        </div>

                                        <!-- Answer Form -->
                                        @if (showAnswerForm == question.Id)
                                        {
                                            <div class="answer-form">
                                                <div class="form-group">
                                                    <textarea @bind="newAnswerContent" class="form-control"
                                                              placeholder="Write your answer..." rows="4"></textarea>
                                                </div>
                                                <div class="form-actions">
                                                    <button class="btn btn-outline" @onclick="() => ToggleAnswerForm(0)">
                                                        Cancel
                                                    </button>
                                                    <button class="btn btn-primary" @onclick="() => SubmitAnswer(question.Id)"
                                                            disabled="@string.IsNullOrWhiteSpace(newAnswerContent)">
                                                        Post Answer
                                                    </button>
                                                </div>
                                            </div>
                                        }

                                        <!-- Answers List -->
                                        <div class="answers-list">
                                            @foreach (var answer in question.Answers.OrderByDescending(a => a.IsAccepted).ThenByDescending(a => a.Likes).ThenBy(a => a.CreatedAt))
                                            {
                                                <div class="answer-card @(answer.IsAccepted ? "accepted" : "")">
                                                    <div class="answer-header">
                                                        <div class="user-avatar">
                                                            @GetUserAvatar(answer.Student)
                                                        </div>
                                                        <div class="user-info">
                                                            <div class="user-name">@answer.Student?.Name</div>
                                                            <div class="post-time">@FormatTime(answer.CreatedAt)</div>
                                                        </div>
                                                        <div class="answer-actions">
                                                            @if (answer.StudentId == currentUser?.Id)
                                                            {
                                                                <button class="btn-icon" @onclick="() => EditAnswer(answer)" title="Edit answer">
                                                                    ✏️
                                                                </button>
                                                                <button class="btn-icon" @onclick="() => DeleteAnswer(answer)" title="Delete answer">
                                                                    🗑️
                                                                </button>
                                                            }
                                                            @if (question.StudentId == currentUser?.Id && !answer.IsAccepted)
                                                            {
                                                                <button class="btn-icon" @onclick="() => AcceptAnswer(answer)" title="Accept as solution">
                                                                    ✅
                                                                </button>
                                                            }
                                                            @if (answer.IsAccepted)
                                                            {
                                                                <span class="accepted-badge" title="Accepted solution">✅ Accepted</span>
                                                            }
                                                        </div>
                                                    </div>
                                                    <div class="answer-content">
                                                        @answer.Content
                                                    </div>
                                                    <div class="answer-footer">
                                                        <div class="answer-actions">
                                                            <button class="btn-icon @(HasLikedAnswer(answer) ? "liked" : "")"
                                                                    @onclick="() => ToggleAnswerLike(answer)">
                                                                👍 @answer.Likes
                                                            </button>
                                                            <button class="btn-icon" @onclick="() => ReportAnswer(answer)" title="Report">
                                                                ⚠️
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="empty-forum">
                                <div class="empty-icon">💬</div>
                                <h3>No Questions Found</h3>
                                <p>@(string.IsNullOrEmpty(searchTerm) ? "Be the first to ask a question!" : "No questions match your search.")</p>
                                <button class="btn btn-primary" @onclick="ShowNewQuestionModal">
                                    Ask First Question
                                </button>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- New Question Modal -->
    @if (showNewQuestionModal)
    {
        <div class="modal-overlay">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>📝 Ask a Question</h3>
                    <button class="close-btn" @onclick="CloseNewQuestionModal">×</button>
                </div>
                <div class="modal-body">
                    <form class="question-form">
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" @bind="newQuestion.Title" class="form-control"
                                   placeholder="Enter your question title..." />
                        </div>
                        <div class="form-group">
                            <label>Question</label>
                            <textarea @bind="newQuestion.Content" class="form-control" rows="6"
                                      placeholder="Describe your question in detail..."></textarea>
                        </div>
                        <div class="form-group">
                            <label>Tags (comma-separated)</label>
                            <input type="text" @bind="newQuestion.Tags" class="form-control"
                                   placeholder="e.g., math, programming, homework" />
                        </div>
                        <div class="form-group">
                            <label>Attachment (optional)</label>
                            <InputFile @ref="fileInput" OnChange="HandleFileUpload" class="form-control" />
                            @if (!string.IsNullOrEmpty(newQuestion.AttachmentPath))
                            {
                                <div class="file-preview">
                                    <span>Selected: @GetFileName(newQuestion.AttachmentPath)</span>
                                    <button type="button" class="btn-icon" @onclick="RemoveAttachment">🗑️</button>
                                </div>
                            }
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-outline" @onclick="CloseNewQuestionModal">Cancel</button>
                    <button class="btn btn-primary" @onclick="SubmitQuestion"
                            disabled="@(!CanSubmitQuestion())">
                        Post Question
                    </button>
                </div>
            </div>
        </div>
    }
    <!-- Edit Question Modal -->
    @if (showEditQuestionModal)
    {
        <div class="modal-overlay">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>✏️ Edit Question</h3>
                    <button class="close-btn" @onclick="CloseEditQuestionModal">×</button>
                </div>
                <div class="modal-body">
                    <form class="question-form">
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" @bind="editQuestion.Title" class="form-control"
                                   placeholder="Enter your question title..." />
                        </div>
                        <div class="form-group">
                            <label>Question</label>
                            <textarea @bind="editQuestion.Content" class="form-control" rows="6"
                                      placeholder="Describe your question in detail..."></textarea>
                        </div>
                        <div class="form-group">
                            <label>Tags (comma-separated)</label>
                            <input type="text" @bind="editQuestion.Tags" class="form-control"
                                   placeholder="e.g., math, programming, homework" />
                        </div>
                        <div class="form-group">
                            <label>Attachment (optional)</label>
                            <InputFile @ref="editFileInput" OnChange="HandleEditFileUpload" class="form-control" />
                            @if (!string.IsNullOrEmpty(editQuestion.AttachmentPath))
                            {
                                <div class="file-preview">
                                    <span>Selected: @GetFileName(editQuestion.AttachmentPath)</span>
                                    <button type="button" class="btn-icon" @onclick="RemoveEditAttachment">🗑️</button>
                                </div>
                            }
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-outline" @onclick="CloseEditQuestionModal">Cancel</button>
                    <button class="btn btn-primary" @onclick="SubmitEditQuestion"
                            disabled="@(!CanSubmitEditQuestion())">
                        Update Question
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Edit Answer Modal -->
    @if (showEditAnswerModal)
    {
        <div class="modal-overlay">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>✏️ Edit Answer</h3>
                    <button class="close-btn" @onclick="CloseEditAnswerModal">×</button>
                </div>
                <div class="modal-body">
                    <form class="question-form">
                        <div class="form-group">
                            <label>Your Answer</label>
                            <textarea @bind="editAnswer.Content" class="form-control" rows="6"
                                      placeholder="Write your answer..."></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-outline" @onclick="CloseEditAnswerModal">Cancel</button>
                    <button class="btn btn-primary" @onclick="SubmitEditAnswer"
                            disabled="@string.IsNullOrWhiteSpace(editAnswer.Content)">
                        Update Answer
                    </button>
                </div>
            </div>
        </div>
    }
}

@code {
    private bool isAuthChecked = false;
    private bool isAuthorized = false;
    private bool isLoading = true;
    private bool showNewQuestionModal = false;
    private bool showEditQuestionModal = false;
    private bool showEditAnswerModal = false;
    private int unansweredCount = 0;
    private int answeredCount = 0;

    // Forum Data
    private List<ForumQuestion> questions = new();
    private List<ForumQuestion> filteredQuestions = new();
    private User? currentUser = null;
    private string searchTerm = "";
    private string activeFilter = "all";
    private int totalAnswers = 0;
    private int myQuestionsCount = 0;

    // New Question
    private ForumQuestion newQuestion = new();
    private ForumQuestion editQuestion = new();
    private ForumAnswer editAnswer = new();
    private Microsoft.AspNetCore.Components.Forms.InputFile? fileInput;
    private Microsoft.AspNetCore.Components.Forms.InputFile? editFileInput;

    // Answer Form
    private int showAnswerForm = 0;
    private string newAnswerContent = "";

    protected override async Task OnInitializedAsync()
    {
        await CheckAuthorization();
        if (isAuthorized)
        {
            await LoadForumData();
        }
    }

    private async Task CheckAuthorization()
    {
        try
        {
            for (int i = 0; i < 20; i++)
            {
                if (AuthStateService.CurrentUser != null)
                    break;
                await Task.Delay(100);
            }

            currentUser = AuthStateService.CurrentUser;
            isAuthorized = currentUser != null && currentUser.Role == "Student";
            isAuthChecked = true;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Authorization error: {ex.Message}");
            isAuthChecked = true;
            StateHasChanged();
        }
    }

    private async Task LoadForumData()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            if (currentUser == null) return;

            // Load questions with answers and students
            questions = await Context.ForumQuestions
                .Include(q => q.Student)
                .Include(q => q.Answers)
                    .ThenInclude(a => a.Student)
                .OrderByDescending(q => q.CreatedAt)
                .ToListAsync();

            // Calculate statistics
            totalAnswers = questions.Sum(q => q.Answers.Count);
            myQuestionsCount = questions.Count(q => q.StudentId == currentUser.Id);
            unansweredCount = questions.Count(q => !q.Answers.Any());
            answeredCount = questions.Count(q => q.Answers.Any());

            ApplyFilters();

            isLoading = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading forum data: {ex.Message}");
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ApplyFilters()
    {
        var query = questions.AsQueryable();

        // Apply search filter
        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            query = query.Where(q =>
                q.Title.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                q.Content.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                q.Tags.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
            );
        }

        // Apply type filter
        switch (activeFilter)
        {
            case "my":
                if (currentUser != null)
                {
                    query = query.Where(q => q.StudentId == currentUser.Id);
                }
                break;
            case "unanswered":
                query = query.Where(q => !q.Answers.Any());
                break;
            case "answered":
                query = query.Where(q => q.Answers.Any());
                break;
            case "all":
            default:
                // Show all questions
                break;
        }

        filteredQuestions = query.ToList();
        StateHasChanged();
    }

    private void SetFilter(string filter)
    {
        activeFilter = filter;
        ApplyFilters();
    }

    private void OnSearch(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? "";
        ApplyFilters();
    }

    private void ShowNewQuestionModal()
    {
        newQuestion = new ForumQuestion();
        showNewQuestionModal = true;
        StateHasChanged();
    }

    private void CloseNewQuestionModal()
    {
        showNewQuestionModal = false;
        newQuestion = new ForumQuestion();
        StateHasChanged();
    }

    private void RefreshCounts()
    {
        if (questions.Any())
        {
            myQuestionsCount = questions.Count(q => q.StudentId == currentUser?.Id);
            unansweredCount = questions.Count(q => !q.Answers.Any());
            answeredCount = questions.Count(q => q.Answers.Any());
        }
        else
        {
            myQuestionsCount = 0;
            unansweredCount = 0;
            answeredCount = 0;
        }
    }

    private bool CanSubmitQuestion()
    {
        return !string.IsNullOrWhiteSpace(newQuestion.Title) &&
               !string.IsNullOrWhiteSpace(newQuestion.Content);
    }

    private bool CanSubmitEditQuestion()
    {
        return !string.IsNullOrWhiteSpace(editQuestion.Title) &&
               !string.IsNullOrWhiteSpace(editQuestion.Content);
    }

    private async Task SubmitQuestion()
    {
        if (!CanSubmitQuestion() || currentUser == null) return;

        try
        {
            newQuestion.StudentId = currentUser.Id;
            newQuestion.CreatedAt = DateTime.Now;
            newQuestion.UpdatedAt = DateTime.Now;

            Context.ForumQuestions.Add(newQuestion);
            await Context.SaveChangesAsync();

            await LoadForumData(); // This will refresh all counts
            CloseNewQuestionModal();

        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error posting question: {ex.Message}");
        }
    }

    // EDIT QUESTION FUNCTIONALITY
    private async Task EditQuestion(ForumQuestion question)
    {
        try
        {
            // Create a copy of the question to edit
            editQuestion = new ForumQuestion
            {
                Id = question.Id,
                Title = question.Title,
                Content = question.Content,
                Tags = question.Tags,
                AttachmentPath = question.AttachmentPath,
                StudentId = question.StudentId,
                CreatedAt = question.CreatedAt
            };

            showEditQuestionModal = true;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error preparing edit: {ex.Message}");
        }
    }

    private void CloseEditQuestionModal()
    {
        showEditQuestionModal = false;
        editQuestion = new ForumQuestion();
        StateHasChanged();
    }

    private async Task SubmitEditQuestion()
    {
        if (!CanSubmitEditQuestion() || currentUser == null) return;

        try
        {
            var existingQuestion = await Context.ForumQuestions.FindAsync(editQuestion.Id);

            if (existingQuestion == null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Question not found!");
                return;
            }

            // Verify the current user owns this question
            if (existingQuestion.StudentId != currentUser.Id)
            {
                await JSRuntime.InvokeVoidAsync("alert", "You can only edit your own questions!");
                return;
            }

            // Update the question
            existingQuestion.Title = editQuestion.Title.Trim();
            existingQuestion.Content = editQuestion.Content.Trim();
            existingQuestion.Tags = editQuestion.Tags?.Trim();
            existingQuestion.AttachmentPath = editQuestion.AttachmentPath;
            existingQuestion.UpdatedAt = DateTime.Now;

            await Context.SaveChangesAsync();
            await LoadForumData();
            CloseEditQuestionModal();

        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error updating question: {ex.Message}");
        }
    }

    // EDIT ANSWER FUNCTIONALITY
    private async Task EditAnswer(ForumAnswer answer)
    {
        try
        {
            // Create a copy of the answer to edit
            editAnswer = new ForumAnswer
            {
                Id = answer.Id,
                Content = answer.Content,
                QuestionId = answer.QuestionId,
                StudentId = answer.StudentId,
                CreatedAt = answer.CreatedAt,
                IsAccepted = answer.IsAccepted,
                Likes = answer.Likes
            };

            showEditAnswerModal = true;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error preparing edit: {ex.Message}");
        }
    }

    private void CloseEditAnswerModal()
    {
        showEditAnswerModal = false;
        editAnswer = new ForumAnswer();
        StateHasChanged();
    }

    private async Task SubmitEditAnswer()
    {
        if (string.IsNullOrWhiteSpace(editAnswer.Content) || currentUser == null) return;

        try
        {
            var existingAnswer = await Context.ForumAnswers.FindAsync(editAnswer.Id);

            if (existingAnswer == null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Answer not found!");
                return;
            }

            // Verify the current user owns this answer
            if (existingAnswer.StudentId != currentUser.Id)
            {
                await JSRuntime.InvokeVoidAsync("alert", "You can only edit your own answers!");
                return;
            }

            // Update the answer
            existingAnswer.Content = editAnswer.Content.Trim();
            existingAnswer.UpdatedAt = DateTime.Now;

            await Context.SaveChangesAsync();
            await LoadForumData();
            CloseEditAnswerModal();

        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error updating answer: {ex.Message}");
        }
    }

    // Answer Management
    private void ToggleAnswerForm(int questionId)
    {
        showAnswerForm = showAnswerForm == questionId ? 0 : questionId;
        newAnswerContent = "";
        StateHasChanged();
    }

    private async Task SubmitAnswer(int questionId)
    {
        if (string.IsNullOrWhiteSpace(newAnswerContent) || currentUser == null) return;

        try
        {
            var answer = new ForumAnswer
            {
                QuestionId = questionId,
                StudentId = currentUser.Id,
                Content = newAnswerContent.Trim(),
                CreatedAt = DateTime.Now,
                UpdatedAt = DateTime.Now
            };

            Context.ForumAnswers.Add(answer);
            await Context.SaveChangesAsync();

            await LoadForumData();
            ToggleAnswerForm(0);
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error posting answer: {ex.Message}");
        }
    }

    // Helper Methods
    private string GetUserAvatar(User? user)
    {
        return user?.Role switch
        {
            "Student" => "🎓",
            "Teacher" => "👨‍🏫",
            "Admin" => "👤",
            _ => "👤"
        };
    }

    private string FormatTime(DateTime dateTime)
    {
        var now = DateTime.Now;
        var difference = now - dateTime;

        if (difference.TotalMinutes < 1) return "Just now";
        if (difference.TotalHours < 1) return $"{(int)difference.TotalMinutes}m ago";
        if (difference.TotalDays < 1) return $"{(int)difference.TotalHours}h ago";
        if (difference.TotalDays < 7) return $"{(int)difference.TotalDays}d ago";
        return dateTime.ToString("MMM dd, yyyy");
    }

    private string GetFileName(string path)
    {
        return System.IO.Path.GetFileName(path);
    }

    private bool HasLikedAnswer(ForumAnswer answer)
    {
        // In a real app, you'd track which users liked which answers
        return false;
    }

    private async Task DeleteQuestion(ForumQuestion question)
    {
        bool confirm = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this question? All answers will also be deleted.");
        if (confirm)
        {
            try
            {
                Context.ForumQuestions.Remove(question);
                await Context.SaveChangesAsync();
                await LoadForumData(); // Refresh counts
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error deleting question: {ex.Message}");
            }
        }
    }

    private async Task DeleteAnswer(ForumAnswer answer)
    {
        bool confirm = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this answer?");
        if (confirm)
        {
            try
            {
                Context.ForumAnswers.Remove(answer);
                await Context.SaveChangesAsync();
                await LoadForumData();
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error deleting answer: {ex.Message}");
            }
        }
    }

    private async Task AcceptAnswer(ForumAnswer answer)
    {
        try
        {
