@page "/studentgrades"
@using Thesis.Components.Layout
@layout MainLayout
@inject AuthStateService AuthStateService
@inject NavigationManager Navigation
@inject Data.AppDbContext Context
@inject IJSRuntime JSRuntime
@using Thesis.Models
@using Microsoft.EntityFrameworkCore

<PageTitle>Gnosis - My Grades</PageTitle>

@if (!isAuthChecked)
{
    <div class="loading-container">
        <div class="spinner"></div>
        <p>Loading Grades...</p>
    </div>
}
else if (!isAuthorized)
{
    <div class="unauthorized-container">
        <div class="unauthorized-card">
            <div class="unauthorized-icon">🚫</div>
            <h3>Access Denied</h3>
            <p>You don't have permission to access grades.</p>
            <button class="btn btn-primary" @onclick="RedirectToHome">Return to Home</button>
        </div>
    </div>
}
else
{
    <div class="student-grades">
        <!-- Header -->
        <div class="header-bar">
            <button class="back-btn" @onclick="GoBack">← Back to Dashboard</button>
            <h2>📊 My Grades</h2>
            <div class="header-actions">
                <div class="overall-stats">
                    <div class="stat-badge">
                        <span class="stat-label">Average Grade</span>
                        <span class="stat-value">@(overallAverage.HasValue? overallAverage.Value.ToString("0.0") : "N/A")</span>
                    </div>
                    <div class="stat-badge">
                        <span class="stat-label">Courses</span>
                        <span class="stat-value">@enrollments.Count</span>
                    </div>
                    <div class="stat-badge">
                        <span class="stat-label">Graded</span>
                        <span class="stat-value">@gradedCoursesCount</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="grades-container">
            @if (isLoading)
            {
                <div class="loading">Loading your grades...</div>
            }
            else
            {
                <div class="grades-content">
                    <!-- Course Grades Section -->
                    <div class="section-card">
                        <div class="section-header">
                            <h3>📚 Course Grades</h3>
                            <div class="section-actions">
                                <button class="btn btn-outline btn-sm" @onclick="ExportGrades">
                                    📥 Export Grades
                                </button>
                            </div>
                        </div>
                        <div class="section-content">
                            @if (enrollmentsWithGrades.Any())
                            {
                                <div class="courses-grid">
                                    @foreach (var enrollment in enrollmentsWithGrades)
                                    {
                                        <div class="course-grade-card">
                                            <div class="course-header">
                                                <div class="course-info">
                                                    <h4 class="course-name">@enrollment.Enrollment.Course.Name</h4>
                                                    <p class="course-description">@enrollment.Enrollment.Course.Description</p>
                                                    <p class="enrollment-date">Enrolled: @enrollment.Enrollment.EnrollmentDate.ToString("MMM dd, yyyy")</p>
                                                </div>
                                                <div class="course-grade">
                                                    @if (enrollment.ExistingGrade != null && enrollment.ExistingGrade.GradeValue > 0)
                                                    {
                                                        <div class="grade-badge @GetGradeClass(enrollment.ExistingGrade.GradeValue)">
                                                            @enrollment.ExistingGrade.GradeValue.ToString("0.0")
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="grade-badge no-grade">
                                                            N/A
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                            <div class="course-details">
                                                <div class="detail-item">
                                                    <span class="detail-label">Professor:</span>
                                                    <span class="detail-value">@enrollment.Enrollment.Course.Professor?.Name</span>
                                                </div>
                                                <div class="detail-item">
                                                    <span class="detail-label">Grading Method:</span>
                                                    <span class="detail-value">@(enrollment.Enrollment.Course.GradingMethod?.ToString() ?? "Not set")</span>
                                                </div>
                                                <div class="detail-item">
                                                    <span class="detail-label">Difficulty:</span>
                                                    <span class="detail-value">
                                                        @for (int i = 1; i <= 5; i++)
                                                        {
                                                            <span class="star @(i <= enrollment.Enrollment.Course.DifficultyRating ? "filled" : "")">★</span>
                                                        }
                                                        (@enrollment.Enrollment.Course.DifficultyRating.ToString("0.0"))
                                                    </span>
                                                </div>
                                                <div class="detail-item">
                                                    <span class="detail-label">Last Updated:</span>
                                                    <span class="detail-value">
                                                        @(enrollment.ExistingGrade?.UpdatedAt.ToString("MMM dd, yyyy") ?? "Not graded")
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="empty-state">
                                    <div class="empty-icon">📊</div>
                                    <h4>No Grades Available</h4>
                                    <p>You haven't been graded in any courses yet.</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Detailed Grades Section -->
                    <div class="section-card">
                        <div class="section-header">
                            <h3>📝 Detailed Grade Breakdown</h3>
                        </div>
                        <div class="section-content">
                            @if (allGrades.Any())
                            {
                                <div class="grades-table-container">
                                    <table class="grades-table">
                                        <thead>
                                            <tr>
                                                <th>Course</th>
                                                <th>Description</th>
                                                <th>Grade</th>
                                                <th>Status</th>
                                                <th>Last Updated</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var grade in allGrades)
                                            {
                                                <tr>
                                                    <td class="course-cell">
                                                        <div class="course-name">@grade.Course?.Name</div>
                                                        <div class="course-professor">Prof. @grade.Course?.Professor?.Name</div>
                                                    </td>
                                                    <td class="description-cell">
                                                        <div class="course-description">@grade.Course?.Description</div>
                                                    </td>
                                                    <td>
                                                        <span class="grade-value @GetGradeClass(grade.GradeValue)">
                                                            @grade.GradeValue.ToString("0.0")
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span class="status-badge @GetStatusClass(grade.GradeValue)">
                                                            @GetStatusText(grade.GradeValue)
                                                        </span>
                                                    </td>
                                                    <td class="date-cell">
                                                        @grade.UpdatedAt.ToString("MMM dd, yyyy")
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="empty-state">
                                    <div class="empty-icon">📝</div>
                                    <h4>No Detailed Grades</h4>
                                    <p>Your detailed grade breakdown will appear here once you have graded assignments.</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- All Enrollments Section -->
                    <div class="section-card">
                        <div class="section-header">
                            <h3>🎓 My Enrollments</h3>
                        </div>
                        <div class="section-content">
                            @if (enrollments.Any())
                            {
                                <div class="enrollments-list">
                                    @foreach (var enrollment in enrollments)
                                    {
                                        <div class="enrollment-item">
                                            <div class="enrollment-info">
                                                <div class="course-header">
                                                    <h4 class="course-name">@enrollment.Course.Name</h4>
                                                    <span class="course-method">@(enrollment.Course.GradingMethod?.ToString() ?? "Method not set")</span>
                                                </div>
                                                <div class="course-description">@enrollment.Course.Description</div>
                                                <div class="enrollment-details">
                                                    <div class="detail-row">
                                                        <span class="detail-label">Professor:</span>
                                                        <span class="detail-value">@enrollment.Course.Professor?.Name</span>
                                                    </div>
                                                    <div class="detail-row">
                                                        <span class="detail-label">Difficulty:</span>
                                                        <span class="detail-value">
                                                            @for (int i = 1; i <= 5; i++)
                                                            {
                                                                <span class="star @(i <= enrollment.Course.DifficultyRating ? "filled" : "")">★</span>
                                                            }
                                                        </span>
                                                    </div>
                                                    <div class="detail-row">
                                                        <span class="detail-label">Enrollment Date:</span>
                                                        <span class="detail-value">@enrollment.EnrollmentDate.ToString("MMM dd, yyyy")</span>
                                                    </div>
                                                    <div class="detail-row">
                                                        <span class="detail-label">Duration:</span>
                                                        <span class="detail-value">@GetEnrollmentDuration(enrollment.EnrollmentDate)</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="enrollment-status">
                                                @if (HasGrade(enrollment.CourseId))
                                                {
                                                    <span class="status-badge completed">Graded</span>
                                                }
                                                else
                                                {
                                                    <span class="status-badge in-progress">In Progress</span>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="empty-state">
                                    <div class="empty-icon">🎓</div>
                                    <h4>No Enrollments</h4>
                                    <p>You are not enrolled in any courses yet.</p>
                                    <button class="btn btn-primary" @onclick="NavigateToCourses">
                                        Browse Courses
                                    </button>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Statistics Section -->
                    <div class="section-card">
                        <div class="section-header">
                            <h3>📈 Grade Statistics</h3>
                        </div>
                        <div class="section-content">
                            <div class="statistics-grid">
                                <div class="stat-card">
                                    <div class="stat-icon">📊</div>
                                    <div class="stat-content">
                                        <div class="stat-value">@(overallAverage.HasValue? overallAverage.Value.ToString("0.0") : "N/A")</div>
                                        <div class="stat-label">Overall Average</div>
                                    </div>
                                </div>
                                <div class="stat-card">
                                    <div class="stat-icon">📚</div>
                                    <div class="stat-content">
                                        <div class="stat-value">@enrollments.Count</div>
                                        <div class="stat-label">Total Courses</div>
                                    </div>
                                </div>
                                <div class="stat-card">
                                    <div class="stat-icon">✅</div>
                                    <div class="stat-content">
                                        <div class="stat-value">@gradedCoursesCount</div>
                                        <div class="stat-label">Graded Courses</div>
                                    </div>
                                </div>
                                <div class="stat-card">
                                    <div class="stat-icon">⏳</div>
                                    <div class="stat-content">
                                        <div class="stat-value">@(enrollments.Count - gradedCoursesCount)</div>
                                        <div class="stat-label">Pending Grades</div>
                                    </div>
                                </div>
                            </div>

                            @if (gradeDistribution.Any())
                            {
                                <div class="distribution-chart">
                                    <h4>Grade Distribution</h4>
                                    <div class="distribution-bars">
                                        @foreach (var range in gradeDistribution)
                                        {
                                            <div class="distribution-item">
                                                <div class="range-label">@range.Range</div>
                                                <div class="bar-container">
                                                    <div class="bar" style="width: @(range.Percentage)%; background-color: @GetRangeColor(range.Range);"></div>
                                                </div>
                                                <div class="count-label">@range.Count</div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

@code {
    private bool isAuthChecked = false;
    private bool isAuthorized = false;
    private bool isLoading = true;

    // Data
    private List<Enrollment> enrollments = new();
    private List<EnrollmentViewModel> enrollmentsWithGrades = new();
    private List<Grade> allGrades = new();
    private double? overallAverage = null;
    private int gradedCoursesCount = 0;

    // Statistics
    private List<GradeDistribution> gradeDistribution = new();

    protected override async Task OnInitializedAsync()
    {
        await CheckAuthorization();
        if (isAuthorized)
        {
            await LoadData();
        }
    }

    private async Task CheckAuthorization()
    {
        try
        {
            for (int i = 0; i < 20; i++)
            {
                if (AuthStateService.CurrentUser != null)
                    break;
                await Task.Delay(100);
            }

            var user = AuthStateService.CurrentUser;
            isAuthorized = user != null && user.Role == "Student";
            isAuthChecked = true;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Authorization error: {ex.Message}");
            isAuthChecked = true;
            StateHasChanged();
        }
    }

    private async Task LoadData()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            var currentUser = AuthStateService.CurrentUser;
            if (currentUser == null) return;

            // Load enrollments with courses and professors
            enrollments = await Context.Enrollments
                .Include(e => e.Course)
                    .ThenInclude(c => c.Professor)
                .Where(e => e.StudentId == currentUser.Id)
                .OrderByDescending(e => e.EnrollmentDate)
                .ToListAsync();

            // Load all grades
            allGrades = await Context.Grades
                .Include(g => g.Course)
                    .ThenInclude(c => c.Professor)
                .Where(g => g.StudentId == currentUser.Id && g.GradeValue > 0)
                .OrderByDescending(g => g.UpdatedAt)
                .ToListAsync();

            // Create enrollment view models with grades
            enrollmentsWithGrades = enrollments.Select(e => new EnrollmentViewModel
            {
                Enrollment = e,
                ExistingGrade = allGrades.FirstOrDefault(g => g.CourseId == e.CourseId),
                GradeValue = allGrades.FirstOrDefault(g => g.CourseId == e.CourseId)?.GradeValue ?? -1
            }).ToList();

            // Calculate statistics
            CalculateStatistics();

            isLoading = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading grades data: {ex.Message}");
            isLoading = false;
            StateHasChanged();
        }
    }

    private void CalculateStatistics()
    {
        // Calculate overall average
        var validGrades = allGrades.Where(g => g.GradeValue > 0).ToList();
        if (validGrades.Any())
        {
            overallAverage = validGrades.Average(g => g.GradeValue);
        }

        // Count graded courses
        gradedCoursesCount = enrollments.Count(e => allGrades.Any(g => g.CourseId == e.CourseId && g.GradeValue > 0));

        // Calculate grade distribution
        var gradeRanges = new[]
        {
            new { Range = "9-10", Min = 9.0, Max = 10.0 },
            new { Range = "8-8.9", Min = 8.0, Max = 8.9 },
            new { Range = "7-7.9", Min = 7.0, Max = 7.9 },
            new { Range = "6-6.9", Min = 6.0, Max = 6.9 },
            new { Range = "5-5.9", Min = 5.0, Max = 5.9 },
            new { Range = "0-4.9", Min = 0.0, Max = 4.9 }
        };

        gradeDistribution = gradeRanges.Select(range => new GradeDistribution
        {
            Range = range.Range,
            Count = validGrades.Count(g => g.GradeValue >= range.Min && g.GradeValue <= range.Max),
            Percentage = validGrades.Any() ?
                (validGrades.Count(g => g.GradeValue >= range.Min && g.GradeValue <= range.Max) / (double)validGrades.Count) * 100 : 0
        }).ToList();
    }

    private bool HasGrade(int courseId)
    {
        return allGrades.Any(g => g.CourseId == courseId && g.GradeValue > 0);
    }

    private string GetGradeClass(double grade)
    {
        return grade switch
        {
            >= 9 => "excellent",
            >= 8 => "very-good",
            >= 7 => "good",
            >= 6 => "satisfactory",
            >= 5 => "pass",
            _ => "fail"
        };
    }

    private string GetStatusClass(double grade)
    {
        return grade switch
        {
            >= 5 => "passed",
            _ => "failed"
        };
    }

    private string GetStatusText(double grade)
    {
        return grade >= 5 ? "Passed" : "Failed";
    }

    private string GetEnrollmentDuration(DateTime enrollmentDate)
    {
        var duration = DateTime.Now - enrollmentDate;
        if (duration.TotalDays < 30)
            return $"{(int)duration.TotalDays} days";
        else if (duration.TotalDays < 365)
            return $"{(int)(duration.TotalDays / 30)} months";
        else
            return $"{(int)(duration.TotalDays / 365)} years";
    }

    private string GetRangeColor(string range)
    {
        return range switch
        {
            "9-10" => "#059669",
            "8-8.9" => "#10b981",
            "7-7.9" => "#84cc16",
            "6-6.9" => "#eab308",
            "5-5.9" => "#f59e0b",
            "0-4.9" => "#dc2626",
            _ => "#6b7280"
        };
    }

    private async Task ExportGrades()
    {
        try
        {
            var currentUser = AuthStateService.CurrentUser;
            if (currentUser == null) return;

            // Create CSV content
            var csvContent = new List<string>();

            // Add header with student info
            csvContent.Add($"Student Grade Report");
            csvContent.Add($"Generated: {DateTime.Now:yyyy-MM-dd HH:mm:ss}");
            csvContent.Add($"Student: {currentUser.Name}");
            csvContent.Add($"Email: {currentUser.Email}");
            csvContent.Add($"Total Courses: {enrollments.Count}");
            csvContent.Add($"Graded Courses: {gradedCoursesCount}");
            csvContent.Add($"Overall Average: {(overallAverage.HasValue ? overallAverage.Value.ToString("0.0") : "N/A")}");
            csvContent.Add("");

            // Add course grades header
            csvContent.Add("COURSE GRADES");
            csvContent.Add("Course Name,Description,Professor,Grade,Status,Last Updated,Enrollment Date,Grading Method,Difficulty Rating");

            // Add grade data
            foreach (var enrollment in enrollmentsWithGrades)
            {
                var course = enrollment.Enrollment.Course;
                var grade = enrollment.ExistingGrade;

                var courseName = EscapeCsvField(course.Name);
                var description = EscapeCsvField(course.Description ?? "No description");
                var professor = EscapeCsvField(course.Professor?.Name ?? "Unknown");
                var gradeValue = grade?.GradeValue.ToString("0.0") ?? "N/A";
                var status = GetGradeStatus(grade?.GradeValue);
                var lastUpdated = grade?.UpdatedAt.ToString("yyyy-MM-dd") ?? "N/A";
                var enrollmentDate = enrollment.Enrollment.EnrollmentDate.ToString("yyyy-MM-dd");
                var gradingMethod = course.GradingMethod?.ToString() ?? "Not Set";
                var difficultyRating = course.DifficultyRating.ToString("0.0");

                csvContent.Add($"{courseName},{description},{professor},{gradeValue},{status},{lastUpdated},{enrollmentDate},{gradingMethod},{difficultyRating}");
            }

            // Add detailed grades section
            csvContent.Add("");
            csvContent.Add("DETAILED GRADE BREAKDOWN");
            csvContent.Add("Course Name,Grade,Status,Grade Date");

            foreach (var grade in allGrades.OrderBy(g => g.Course?.Name))
            {
                var courseName = EscapeCsvField(grade.Course?.Name ?? "Unknown Course");
                var gradeValue = grade.GradeValue.ToString("0.0");
                var status = GetGradeStatus(grade.GradeValue);
                var gradeDate = grade.UpdatedAt.ToString("yyyy-MM-dd");

                csvContent.Add($"{courseName},{gradeValue},{status},{gradeDate}");
            }

            // Add statistics section
            csvContent.Add("");
            csvContent.Add("STATISTICS");
            csvContent.Add("Grade Range,Count,Percentage");

            foreach (var range in gradeDistribution)
            {
                csvContent.Add($"{range.Range},{range.Count},{range.Percentage:0.0}%");
            }

            // Combine all lines
            var csvData = string.Join(Environment.NewLine, csvContent);

            // Create filename
            var fileName = $"{SanitizeFileName(currentUser.Name)}_Grades_Export_{DateTime.Now:yyyyMMdd_HHmmss}.csv";

            // Convert to bytes and base64
            var bytes = System.Text.Encoding.UTF8.GetBytes(csvData);
            var base64Data = Convert.ToBase64String(bytes);

            // Export using your existing JavaScript function - FIXED: Added await
            await JSRuntime.InvokeVoidAsync("downloadFile", fileName, base64Data, "text/csv;charset=utf-8");

            // Show success message - FIXED: Added await
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error exporting grades: {ex.Message}");
            // FIXED: Added await
            await JSRuntime.InvokeVoidAsync("alert", $"Error exporting grades: {ex.Message}");
        }
    }

    private string GetGradeStatus(double? grade)
    {
        if (!grade.HasValue || grade.Value <= 0)
            return "Not Graded";

        return grade.Value >= 5 ? "Passed" : "Failed";
    }

    private string EscapeCsvField(string field)
    {
        if (string.IsNullOrEmpty(field))
            return "\"\"";

        // If field contains comma, quote, or newline, wrap in quotes and escape existing quotes
        if (field.Contains(",") || field.Contains("\"") || field.Contains("\r") || field.Contains("\n"))
        {
            field = field.Replace("\"", "\"\"");
            return $"\"{field}\"";
        }

        return field;
    }

    private string SanitizeFileName(string fileName)
    {
        // Remove invalid file name characters
        var invalidChars = Path.GetInvalidFileNameChars();
        return string.Join("_", fileName.Split(invalidChars, StringSplitOptions.RemoveEmptyEntries)).TrimEnd('.');
    }

    private void GoBack() => Navigation.NavigateTo("/studenthome");
    private void RedirectToHome() => Navigation.NavigateTo("/");
    private void NavigateToCourses() => Navigation.NavigateTo("/courses");

    // Helper classes
    private class GradeDistribution
    {
        public string Range { get; set; } = "";
        public int Count { get; set; }
        public double Percentage { get; set; }
    }
}
