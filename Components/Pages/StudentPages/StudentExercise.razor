@page "/studentex"
@inject AuthStateService AuthStateService
@inject ExercisesService ExercisesService
@inject GradesService GradesService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@using Microsoft.AspNetCore.Components.Forms

<PageTitle>Thesis - Student Exercises</PageTitle>

@if (!isAuthChecked)
{
    <div class="loading-container">
        <div class="spinner"></div>
        <p>Loading Exercises...</p>
    </div>
}
else if (!isAuthorized)
{
    <div class="unauthorized-container">
        <div class="unauthorized-card">
            <div class="unauthorized-icon">🚫</div>
            <h3>Access Denied</h3>
            <p>You don't have permission to view exercises.</p>
            <button class="btn btn-primary" @onclick="RedirectToHome">Return to Home</button>
        </div>
    </div>
}
else
{
    <div class="student-exercises">
        <div class="header-bar">
            <button class="back-btn" @onclick="GoBack">← Back to Dashboard</button>
            <h2>Course Exercises</h2>
            <div class="info-badge">Student View</div>
        </div>

        @if (isLoading)
        {
            <div class="loading">Loading your exercises...</div>
        }
        else if (!enrolledCourses.Any())
        {
            <div class="no-data-message">
                <h3>No Courses Enrolled</h3>
                <p>You are not currently enrolled in any courses.</p>
            </div>
        }
        else
        {
            <div class="exercises-container">
                <!-- Left Panel: Course Selection and Exercises List -->
                <div class="exercises-list-container">
                    <div class="section-header">
                        <h3>Available Exercises</h3>
                    </div>

                    <div class="course-selection">
                        <label>Select Course:</label>
                        <select @onchange="OnCourseSelected" value="@selectedCourseId">
                            <option value="0">-- Choose a course --</option>
                            @foreach (var course in enrolledCourses)
                            {
                                <option value="@course.Id">@course.Name</option>
                            }
                        </select>
                    </div>

                    @if (selectedCourse != null)
                    {
                        <div class="exercises-grid">
                            @foreach (var exercise in exercises)
                            {
                                var submission = GetStudentSubmission(exercise.Id);
                                var isOverdue = exercise.DueDate < DateTime.Now;
                                var canSubmit = !isOverdue && (submission == null);

                                <div class="exercise-card @(isOverdue ? "overdue" : "") @(submission != null ? "submitted" : "")">
                                    <div class="exercise-header">
                                        <h4>@exercise.Title</h4>
                                        <div class="exercise-status">
                                            @if (submission != null)
                                            {
                                                <span class="status submitted">Submitted</span>
                                                @if (submission.Grade.HasValue)
                                                {
                                                    <span class="grade">Grade: @submission.Grade.Value.ToString("F1")/@exercise.MaxPoints</span>
                                                }
                                            }
                                            else if (isOverdue)
                                            {
                                                <span class="status overdue">Overdue</span>
                                            }
                                            else
                                            {
                                                <span class="status pending">Pending</span>
                                            }
                                        </div>
                                    </div>
                                    <p class="exercise-description">@exercise.Description</p>

                                    <div class="exercise-details">
                                        <div class="detail-item">
                                            <strong>Due Date:</strong>
                                            <span class="@(isOverdue ? "text-danger" : "text-muted")">
                                                @exercise.DueDate.ToString("MMM dd, yyyy HH:mm")
                                            </span>
                                        </div>
                                        <div class="detail-item">
                                            <strong>Points:</strong>
                                            <span class="text-muted">@exercise.MaxPoints</span>
                                        </div>
                                        @if (!string.IsNullOrEmpty(exercise.Instructions))
                                        {
                                            <div class="detail-item">
                                                <strong>Instructions:</strong>
                                                <span class="text-muted">@exercise.Instructions</span>
                                            </div>
                                        }
                                    </div>

                                    <div class="exercise-actions">
                                        @if (!string.IsNullOrEmpty(exercise.AttachmentPath))
                                        {
                                            <button class="btn-download" @onclick="() => DownloadFile(exercise.AttachmentPath)">
                                                📎 Download Exercise File
                                            </button>
                                        }

                                        @if (canSubmit)
                                        {
                                            <button class="btn-submit" @onclick="() => ShowSubmissionModal(exercise, submission)">
                                                Submit Answer
                                            </button>
                                        }
                                        else if (submission != null)
                                        {
                                            <button class="btn-view" @onclick="() => ViewSubmission(exercise, submission)">
                                                View Submission
                                            </button>
                                        }
                                    </div>

                                    @if (submission != null)
                                    {
                                        <div class="submission-info">
                                            <small>Submitted: @submission.SubmittedAt.ToString("MMM dd, yyyy HH:mm")</small>
                                            @if (submission.Grade.HasValue)
                                            {
                                                <small>Graded: @submission.GradedAt?.ToString("MMM dd, yyyy HH:mm")</small>
                                            }
                                        </div>
                                    }
                                </div>
                            }

                            @if (!exercises.Any())
                            {
                                <div class="no-exercises">
                                    <p>No exercises available for this course yet.</p>
                                    <p class="text-muted">Check back later for new assignments.</p>
                                </div>
                            }
                        </div>
                    }
                </div>

                <!-- Right Panel: Statistics and Info -->
                <div class="info-container">
                    <div class="stats-section">
                        <h4>Your Progress</h4>
                        <div class="stats-grid">
                            <div class="stat-card">
                                <div class="stat-number">@totalExercises</div>
                                <div class="stat-label">Total Exercises</div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-number">@submittedExercises</div>
                                <div class="stat-label">Submitted</div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-number">@gradedExercises</div>
                                <div class="stat-label">Graded</div>
                            </div>
                        </div>
                    </div>

                    <div class="quick-actions">
                        <h4>Quick Actions</h4>
                        <button class="action-btn" @onclick="RefreshExercises">
                            🔄 Refresh Exercises
                        </button>
                    </div>

                    <div class="deadlines-section">
                        <h4>Upcoming Deadlines</h4>
                        @if (upcomingExercises.Any())
                        {
                            <div class="deadlines-list">
                                @foreach (var exercise in upcomingExercises.Take(3))
                                {
                                    <div class="deadline-item">
                                        <strong>@exercise.Title</strong>
                                        <span class="due-date">@exercise.DueDate.ToString("MMM dd")</span>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No upcoming deadlines.</p>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

<!-- Submission Modal -->
@if (showSubmissionModal && selectedExercise != null)
{
    <div class="modal-overlay">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Submit Answer: @selectedExercise.Title</h3>
                <button class="close-btn" @onclick="CloseSubmissionModal">×</button>
            </div>

            <div class="modal-body">
                <div class="exercise-info">
                    <p><strong>Description:</strong> @selectedExercise.Description</p>
                    <p><strong>Due Date:</strong> @selectedExercise.DueDate.ToString("MMM dd, yyyy HH:mm")</p>
                    <p><strong>Points:</strong> @selectedExercise.MaxPoints</p>
                    @if (!string.IsNullOrEmpty(selectedExercise.Instructions))
                    {
                        <p><strong>Instructions:</strong> @selectedExercise.Instructions</p>
                    }
                </div>

                <div class="form-field">
                    <label>Your Answer *</label>
                    <textarea @bind="submissionAnswer" class="form-textarea" rows="6"
                              placeholder="Type your answer here..."></textarea>
                </div>

                <div class="form-field">
                    <label>Upload File (Optional)</label>
                    <InputFile OnChange="HandleFileUpload" class="file-input"
                               accept=".pdf,.doc,.docx,.txt,.zip" />
                    <small>Supported formats: PDF, DOC, DOCX, TXT, ZIP (Max 10MB)</small>

                    @if (!string.IsNullOrEmpty(uploadedFileName))
                    {
                        <div class="file-preview">
                            <span>Selected file: @uploadedFileName</span>
                            <button type="button" class="remove-btn" @onclick="RemoveUploadedFile">Remove</button>
                        </div>
                    }
                </div>

                @if (existingSubmission != null)
                {
                    <div class="previous-submission">
                        <h5>Previous Submission</h5>
                        <p><strong>Submitted:</strong> @existingSubmission.SubmittedAt.ToString("MMM dd, yyyy HH:mm")</p>
                        <p><strong>Your Answer:</strong> @existingSubmission.Answer</p>
                        @if (!string.IsNullOrEmpty(existingSubmission.FilePath))
                        {
                            <p><strong>File:</strong> @GetFileName(existingSubmission.FilePath)</p>
                        }
                    </div>
                }
            </div>

            <div class="modal-actions">
                <button class="save-btn" @onclick="SubmitAnswer" disabled="@(!CanSubmitAnswer())">
                    @(existingSubmission != null ? "Update Submission" : "Submit Answer")
                </button>
                <button class="cancel-btn" @onclick="CloseSubmissionModal">Cancel</button>
            </div>
        </div>
    </div>
}

<!-- View Submission Modal -->
@if (showViewSubmissionModal && selectedSubmission != null && selectedExercise != null)
{
    <div class="modal-overlay">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Your Submission: @selectedExercise.Title</h3>
                <button class="close-btn" @onclick="CloseViewSubmissionModal">×</button>
            </div>

            <div class="modal-body">
                <div class="submission-details">
                    <div class="detail-row">
                        <strong>Submitted:</strong>
                        <span>@selectedSubmission.SubmittedAt.ToString("MMM dd, yyyy HH:mm")</span>
                    </div>

                    @if (selectedSubmission.Grade.HasValue)
                    {
                        <div class="detail-row">
                            <strong>Grade:</strong>
                            <span class="grade-badge">@selectedSubmission.Grade.Value.ToString("F1")/@selectedExercise.MaxPoints</span>
                        </div>
                        <div class="detail-row">
                            <strong>Graded On:</strong>
                            <span>@selectedSubmission.GradedAt?.ToString("MMM dd, yyyy HH:mm")</span>
                        </div>
                    }
                    else
                    {
                        <div class="detail-row">
                            <strong>Status:</strong>
                            <span class="status-pending">Not Graded Yet</span>
                        </div>
                    }
                </div>

                <div class="submission-content">
                    <h5>Your Answer:</h5>
                    <div class="answer-content">
                        @selectedSubmission.Answer
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(selectedSubmission.FilePath))
                {
                    <div class="submission-file">
                        <h5>Attached File:</h5>
                        <button class="btn-download" @onclick="() => DownloadFile(selectedSubmission.FilePath)">
                            📎 Download @GetFileName(selectedSubmission.FilePath)
                        </button>
                    </div>
                }
            </div>

            <div class="modal-actions">
                <button class="cancel-btn" @onclick="CloseViewSubmissionModal">Close</button>
            </div>
        </div>
    </div>
}

@code {
    private bool isAuthorized = false;
    private bool isAuthChecked = false;
    private bool isLoading = false;
    private bool showSubmissionModal = false;
    private bool showViewSubmissionModal = false;

    private List<Course> enrolledCourses = new();
    private List<Exercise> exercises = new();
    private List<ExerciseSubmission> studentSubmissions = new();
    private List<Exercise> upcomingExercises = new();

    private int selectedCourseId = 0;
    private Course? selectedCourse;
    private Exercise? selectedExercise;
    private ExerciseSubmission? selectedSubmission;
    private ExerciseSubmission? existingSubmission;
    private ElementReference fileInputRef;

    private string submissionAnswer = "";
    private string uploadedFileName = "";
    private IBrowserFile? uploadedFile;

    private int totalExercises = 0;
    private int submittedExercises = 0;
    private int gradedExercises = 0;
    private int currentStudentId = 0;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await AuthStateService.InitializeAsync();
            var user = AuthStateService.CurrentUser;

            isAuthorized = user != null && user.Role == "Student";
            isAuthChecked = true;

            if (isAuthorized)
            {
                currentStudentId = user.Id;
                await LoadStudentData();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error initializing: {ex.Message}");
            isAuthChecked = true;
        }
    }

    private async Task LoadStudentData()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            // Load enrolled courses
            await LoadEnrolledCourses();

            // Load all student submissions
            await LoadStudentSubmissions();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading student data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadEnrolledCourses()
    {
        try
        {
            // Get all courses and filter by enrollment
            var allCourses = await GradesService.GetCoursesAsync();

            // For now, we'll assume the student is enrolled in all courses
            // You'll need to implement proper enrollment checking based on your database
            enrolledCourses = allCourses.ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading enrolled courses: {ex.Message}");
        }
    }

    private async Task LoadStudentSubmissions()
    {
        try
        {
            studentSubmissions = await ExercisesService.GetSubmissionsByStudentAsync(currentStudentId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading submissions: {ex.Message}");
        }
    }

    private async Task LoadExercises(int courseId)
    {
        try
        {
            selectedCourse = enrolledCourses.FirstOrDefault(c => c.Id == courseId);
            if (selectedCourse == null) return;

            exercises = await ExercisesService.GetExercisesByCourseAsync(courseId);

            // Filter to only published exercises
            exercises = exercises.Where(e => e.IsPublished).ToList();

            // Update upcoming exercises
            upcomingExercises = exercises
                .Where(e => e.DueDate > DateTime.Now)
                .OrderBy(e => e.DueDate)
                .ToList();

            CalculateStatistics();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading exercises: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading exercises: {ex.Message}");
        }
    }

    private async Task OnCourseSelected(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int courseId))
        {
            selectedCourseId = courseId;
            if (courseId > 0)
            {
                await LoadExercises(courseId);
            }
            else
            {
                selectedCourse = null;
                exercises.Clear();
                StateHasChanged();
            }
        }
    }

    private ExerciseSubmission? GetStudentSubmission(int exerciseId)
    {
        return studentSubmissions.FirstOrDefault(s => s.ExerciseId == exerciseId);
    }

    private void CalculateStatistics()
    {
        totalExercises = exercises.Count;
        submittedExercises = exercises.Count(e => GetStudentSubmission(e.Id) != null);
        gradedExercises = studentSubmissions.Count(s => s.Grade.HasValue);
    }

    private void ShowSubmissionModal(Exercise exercise, ExerciseSubmission? submission)
    {
        selectedExercise = exercise;
        existingSubmission = submission;
        submissionAnswer = submission?.Answer ?? "";
        uploadedFileName = "";
        uploadedFile = null;
        showSubmissionModal = true;
        StateHasChanged();
    }

    private void ViewSubmission(Exercise exercise, ExerciseSubmission submission)
    {
        selectedExercise = exercise;
        selectedSubmission = submission;
        showViewSubmissionModal = true;
        StateHasChanged();
    }

    private void CloseSubmissionModal()
    {
        showSubmissionModal = false;
        selectedExercise = null;
        existingSubmission = null;
        submissionAnswer = "";
        uploadedFileName = "";
        uploadedFile = null;
        StateHasChanged();
    }

    private void CloseViewSubmissionModal()
    {
        showViewSubmissionModal = false;
        selectedExercise = null;
        selectedSubmission = null;
        StateHasChanged();
    }

    private void HandleFileUpload(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file.Size > 10 * 1024 * 1024) // 10MB limit
        {
            JSRuntime.InvokeVoidAsync("alert", "File size must be less than 10MB.");
            return;
        }

        uploadedFile = file;
        uploadedFileName = file.Name;
        StateHasChanged();
    }

    private void RemoveUploadedFile()
    {
        uploadedFile = null;
        uploadedFileName = "";
        StateHasChanged();
    }

    private bool CanSubmitAnswer()
    {
        return !string.IsNullOrWhiteSpace(submissionAnswer) &&
               selectedExercise != null &&
               selectedExercise.DueDate > DateTime.Now;
    }

    private async Task SubmitAnswer()
    {
        if (!CanSubmitAnswer()) return;

        try
        {
            if (existingSubmission != null)
            {
                // Update existing submission
                existingSubmission.Answer = submissionAnswer;
                existingSubmission.SubmittedAt = DateTime.Now;

                // Handle file upload - in a real app, you'd save the file and update the path
                if (uploadedFile != null)
                {
                    existingSubmission.FilePath = $"submissions/{currentStudentId}/{selectedExercise.Id}/{uploadedFileName}";
                }

                await ExercisesService.UpdateSubmissionAsync(existingSubmission);
            }
            else
            {
                // Create new submission
                var submission = new ExerciseSubmission
                {
                    ExerciseId = selectedExercise.Id,
                    StudentId = currentStudentId,
                    Answer = submissionAnswer,
                    SubmittedAt = DateTime.Now
                };

                // Handle file upload
                if (uploadedFile != null)
                {
                    submission.FilePath = $"submissions/{currentStudentId}/{selectedExercise.Id}/{uploadedFileName}";
                }

                await ExercisesService.AddSubmissionAsync(submission);
            }

            // Refresh data
            await LoadStudentSubmissions();
            await LoadExercises(selectedCourseId);

            CloseSubmissionModal();
            
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error submitting answer: {ex.Message}");
        }
    }

    private async Task DownloadFile(string filePath)
    {
        try
        {
            // Implement file download logic
            await JSRuntime.InvokeVoidAsync("open", $"/files/{filePath}", "_blank");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error downloading file: {ex.Message}");
        }
    }

    private string GetFileName(string filePath)
    {
        return System.IO.Path.GetFileName(filePath);
    }

    private async Task RefreshExercises()
    {
        if (selectedCourseId > 0)
        {
            await LoadExercises(selectedCourseId);
            
        }
    }

    private void GoBack() => Navigation.NavigateTo("/studenthome");
    private void RedirectToHome() => Navigation.NavigateTo("/");
}
