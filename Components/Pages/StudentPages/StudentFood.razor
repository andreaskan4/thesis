    {
        if (selectedDaySchedule == null) return;

        try
        {
            // Get or create the food schedule for the selected day
            var existingSchedule = await Context.FoodSchedules
                .Include(fs => fs.Meals)
                .FirstOrDefaultAsync(fs => fs.Day.Date == selectedDay.Date);

            if (existingSchedule == null)
            {
                existingSchedule = new FoodSchedule { Day = selectedDay.Date };
                Context.FoodSchedules.Add(existingSchedule);
                await Context.SaveChangesAsync(); // Save to get the ID
            }

            // First, remove all meals from this schedule
            var currentMeals = await Context.FoodMeals
                .Where(fm => fm.FoodScheduleId == existingSchedule.Id)
                .ToListAsync();

            foreach (var meal in currentMeals)
            {
                meal.FoodScheduleId = null;
                Context.FoodMeals.Update(meal);
            }

            // Then add the selected meals to the schedule
            foreach (var mealId in selectedMealsForDay)
            {
                var meal = await Context.FoodMeals.FindAsync(mealId);
                if (meal != null)
                {
                    meal.FoodScheduleId = existingSchedule.Id;
                    Context.FoodMeals.Update(meal);
                }
            }

            await Context.SaveChangesAsync();
            await LoadWeeklyScheduleData(); // Refresh the weekly schedule data
            await LoadFoodData(); // Also refresh main food data
            CloseAddMealToDayModal();
            
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error updating meals in schedule: {ex.Message}");
