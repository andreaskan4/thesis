    private bool CanSaveMeal()
    {
        return !string.IsNullOrWhiteSpace(currentMeal.Name) &&
               !string.IsNullOrWhiteSpace(currentMeal.Description) &&
               currentMeal.Price > 0 &&
               currentMeal.PreparationTime > 0 &&
               currentMeal.Servings > 0;
    }

    private async Task SaveMeal()
    {
        if (!CanSaveMeal()) return;

        try
        {
            if (editingMeal != null)
            {
                // Update existing meal
                var existingMeal = await Context.FoodMeals.FindAsync(editingMeal.Id);
                if (existingMeal != null)
                {
                    existingMeal.Name = currentMeal.Name.Trim();
                    existingMeal.Description = currentMeal.Description.Trim();
                    existingMeal.Type = currentMeal.Type;
                    existingMeal.Price = currentMeal.Price;
                    existingMeal.PreparationTime = currentMeal.PreparationTime;
                    existingMeal.Servings = currentMeal.Servings;
                    existingMeal.ChefName = currentMeal.ChefName?.Trim();
                    existingMeal.IsVegetarian = currentMeal.IsVegetarian;
                    existingMeal.Allergens = currentMeal.Allergens?.Trim();
                    existingMeal.UpdatedAt = DateTime.Now;

                    Context.FoodMeals.Update(existingMeal);
                }
            }
            else
            {
                // Add new meal
                currentMeal.CreatedAt = DateTime.Now;
                currentMeal.UpdatedAt = DateTime.Now;

                Context.FoodMeals.Add(currentMeal);
            }

            await Context.SaveChangesAsync();
            await LoadFoodData(); // Refresh data to show the new/updated meal
            CloseMealModal();
            
        }
        catch (Exception ex)
        {
