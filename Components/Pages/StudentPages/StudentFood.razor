@page "/studentfood"
@using Thesis.Components.Layout
@layout MainLayout
@inject AuthStateService AuthStateService
@inject NavigationManager Navigation
@inject Data.AppDbContext Context
@inject IJSRuntime JSRuntime
@using Thesis.Models
@using Microsoft.EntityFrameworkCore

<PageTitle>Gnosis - Student Food</PageTitle>

@if (!isAuthChecked)
{
    <div class="loading-container">
        <div class="spinner"></div>
        <p>Loading Food Service...</p>
    </div>
}
else if (!isAuthorized)
{
    <div class="unauthorized-container">
        <div class="unauthorized-card">
            <div class="unauthorized-icon">🚫</div>
            <h3>Access Denied</h3>
            <p>You don't have permission to access the food service.</p>
            <button class="btn btn-primary" @onclick="RedirectToHome">Return to Home</button>
        </div>
    </div>
}
else
{
    <div class="student-food">
        <!-- Header -->
        <div class="header-bar">
            <button class="back-btn" @onclick="GoBack">← Back to Dashboard</button>
            <h2>🍽️ Student Food Service</h2>
            <div class="header-actions">
                @if (isCafeteriaWorker)
                {
                    <button class="btn btn-primary" @onclick="ShowManageScheduleModal">
                        📅 Manage Weekly Schedule
                    </button>
                }
                <div class="food-stats">
                    <span class="stat-item">Tomorrow: @tomorrowMenu?.Day.ToString("dddd")</span>
                    <span class="stat-item">Available Meals: @(tomorrowMenu?.Meals?.Count ?? 0)</span>
                    @if (isCafeteriaWorker)
                    {
                        <span class="stat-item worker-badge">👨‍🍳 Cafeteria Worker</span>
                    }
                </div>
            </div>
        </div>

        <div class="food-container">
            <!-- Tomorrow's Menu -->
            <div class="tomorrow-menu-section">
                <div class="section-header">
                    <h3>🍽️ Tomorrow's Menu (@tomorrowMenu?.Day.ToString("MMMM dd, yyyy"))</h3>
                </div>

                @if (tomorrowMenu == null || !tomorrowMenu.Meals.Any())
                {
                    <div class="empty-menu">
                        <div class="empty-icon">🍽️</div>
                        <h4>No Menu Scheduled</h4>
                        <p>@(isCafeteriaWorker ? "Add meals to tomorrow's schedule using the weekly schedule manager." : "Check back later for tomorrow's menu.")</p>
                    </div>
                }
                else
                {
                    <div class="meals-grid">
                        @foreach (var meal in tomorrowMenu.Meals)
                        {
                            <div class="meal-card">
                                <div class="meal-header">
                                    <div class="meal-type-badge @meal.Type.ToLower()">@GetMealTypeIcon(meal.Type) @meal.Type</div>
                                </div>
                                <div class="meal-content">
                                    <h4 class="meal-name">@meal.Name</h4>
                                    <p class="meal-description">@meal.Description</p>
                                    <div class="meal-details">
                                        <span class="detail-item">
                                            🕒 @meal.PreparationTime min
                                        </span>
                                        <span class="detail-item">
                                            👥 Serves @meal.Servings
                                        </span>
                                        <span class="detail-item @(meal.IsVegetarian ? "vegetarian" : "")">
                                            @(meal.IsVegetarian ? "🌱 Vegetarian" : "🍖 Non-Veg")
                                        </span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(meal.Allergens))
                                    {
                                        <div class="allergens">
                                            <strong>Allergens:</strong> @meal.Allergens
                                        </div>
                                    }
                                </div>
                                <div class="meal-footer">
                                    <div class="meal-chef">
                                        <span class="chef-avatar">👨‍🍳</span>
                                        <span class="chef-name">@meal.ChefName</span>
                                    </div>
                                    <div class="meal-price">
                                        $@meal.Price.ToString("0.00")
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>

            <!-- All Available Meals Section -->
            <div class="all-meals-section">
                <div class="section-header">
                    <h3>📋 All Available Meals</h3>
                    <div class="section-actions">
                        <button class="btn btn-outline btn-sm" @onclick="RefreshAllMeals">
                            🔄 Refresh
                        </button>
                        @if (isCafeteriaWorker)
                        {
                            <button class="btn btn-primary btn-sm" @onclick="ShowAddMealModal">
                                ➕ Add New Meal
                            </button>
                        }
                    </div>
                </div>

                @if (allMeals == null || !allMeals.Any())
                {
                    <div class="empty-meals">
                        <div class="empty-icon">🍽️</div>
                        <h4>No Meals Available</h4>
                        <p>@(isCafeteriaWorker ? "Start by adding some meals to the system." : "No meals are currently available.")</p>
                    </div>
                }
                else
                {
                    <div class="meals-table-container">
                        <table class="meals-table">
                            <thead>
                                <tr>
                                    <th>Meal Name</th>
                                    <th>Type</th>
                                    <th>Description</th>
                                    <th>Price</th>
                                    <th>Status</th>
                                    @if (isCafeteriaWorker)
                                    {
                                        <th>Actions</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var meal in allMeals)
                                {
                                    <tr class="meal-row @(meal.FoodScheduleId.HasValue ? "scheduled" : "available")">
                                        <td class="meal-name-cell">
                                            <div class="meal-name-with-icon">
                                                <span class="meal-type-icon">@GetMealTypeIcon(meal.Type)</span>
                                                <strong>@meal.Name</strong>
                                            </div>
                                            @if (meal.IsVegetarian)
                                            {
                                                <span class="vegetarian-indicator">🌱 Vegetarian</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="meal-type-tag @meal.Type.ToLower()">@meal.Type</span>
                                        </td>
                                        <td class="meal-description-cell">
                                            <span class="meal-description">@meal.Description</span>
                                            @if (!string.IsNullOrEmpty(meal.Allergens))
                                            {
                                                <div class="allergens-small">
                                                    <small><strong>Allergens:</strong> @meal.Allergens</small>
                                                </div>
                                            }
                                        </td>
                                        <td class="meal-price-cell">
                                            $@meal.Price.ToString("0.00")
                                        </td>
                                        <td class="meal-status-cell">
                                            @if (meal.FoodScheduleId.HasValue)
                                            {
                                                <span class="status-badge scheduled">📅 Scheduled</span>
                                            }
                                            else
                                            {
                                                <span class="status-badge available">✅ Available</span>
                                            }
                                        </td>
                                        @if (isCafeteriaWorker)
                                        {
                                            <td class="meal-actions-cell">
                                                <div class="action-buttons">
                                                    <button class="btn-icon" @onclick="() => EditMeal(meal)" title="Edit meal">
                                                        ✏️
                                                    </button>
                                                    <button class="btn-icon btn-danger" @onclick="() => DeleteMeal(meal)" title="Delete meal">
                                                        🗑️
                                                    </button>
                                                </div>
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>

            <!-- Weekly Schedule (Visible only to workers) -->
            @if (isCafeteriaWorker)
            {
                <div class="weekly-schedule-section">
                    <div class="section-header">
                        <h3>📅 Weekly Schedule</h3>
                        <div class="schedule-actions">
                            <button class="btn btn-outline btn-sm" @onclick="RefreshSchedule">
                                🔄 Refresh
                            </button>
                            <button class="btn btn-primary btn-sm" @onclick="ShowAddMealModal">
                                ➕ Add New Meal
                            </button>
                        </div>
                    </div>

                    @if (weeklySchedule == null || !weeklySchedule.Any())
                    {
                        <div class="empty-schedule">
                            <div class="empty-icon">📅</div>
                            <h4>No Weekly Schedule</h4>
                            <p>Start by adding meals to the weekly schedule.</p>
                        </div>
                    }
                    else
                    {
                        <div class="schedule-days">
                            @foreach (var daySchedule in weeklySchedule.OrderBy(ws => ws.Day))
                            {
                                <div class="day-schedule @(daySchedule.Day.Date == tomorrowMenu?.Day.Date ? "tomorrow" : "")">
                                    <div class="day-header">
                                        <h4>@daySchedule.Day.ToString("dddd")</h4>
                                        <span class="day-date">@daySchedule.Day.ToString("MMM dd")</span>
                                        <div class="day-actions">
                                            @if (!IsPastDay(daySchedule.Day))
                                            {
                                                <button class="btn-icon" @onclick="() => ShowAddMealToDayModal(daySchedule)" title="Add meal to day">
                                                    ➕
                                                </button>
                                                <button class="btn-icon" @onclick="() => ClearDaySchedule(daySchedule)" title="Clear day schedule">
                                                    🗑️
                                                </button>
                                            }
                                            else
                                            {
                                                <span class="past-day-indicator">Past day</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="day-meals">
                                        @if (daySchedule.Meals.Any())
                                        {
                                            @foreach (var meal in daySchedule.Meals)
                                            {
                                                <div class="schedule-meal">
                                                    <div class="meal-info">
                                                        <span class="meal-type @meal.Type.ToLower()">@GetMealTypeIcon(meal.Type)</span>
                                                        <span class="meal-name">@meal.Name</span>
                                                    </div>
                                                    <div class="meal-actions">
                                                        @if (!IsPastDay(daySchedule.Day))
                                                        {
                                                            <button class="btn-icon" @onclick="() => RemoveMealFromDay(daySchedule, meal)" title="Remove from day">
                                                                ❌
                                                            </button>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="no-meals">No meals scheduled</div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <!-- Manage Schedule Modal -->
    @if (showManageScheduleModal)
    {
        <div class="modal-overlay">
            <div class="modal-content large-modal">
                <div class="modal-header">
                    <h3>📅 Manage Weekly Schedule</h3>
                    <button class="close-btn" @onclick="CloseManageScheduleModal">×</button>
                </div>
                <div class="modal-body">
                    <div class="schedule-management">
                        <div class="current-week-display">
                            <h4>Current Week: @currentWeekStart.ToString("MMMM dd") - @currentWeekStart.AddDays(4).ToString("MMMM dd")</h4>
                        </div>

                        <div class="weekly-grid">
                            @foreach (var day in weekDays)
                            {
                                var daySchedule = GetDaySchedule(day);
                                <div class="weekly-day @(day.Date == DateTime.Today ? "today" : "") @(day.Date == DateTime.Today.AddDays(1) ? "tomorrow" : "")">
                                    <div class="weekly-day-header">
                                        <h4>@day.ToString("dddd")</h4>
                                        <span class="weekly-date">@day.ToString("MMM dd")</span>
                                    </div>
                                    <div class="weekly-meals">
                                        @if (daySchedule?.Meals?.Any() == true)
                                        {
                                            @foreach (var meal in daySchedule.Meals)
                                            {
                                                <div class="weekly-meal">
                                                    <div class="weekly-meal-info">
                                                        <span class="weekly-meal-name">@meal.Name</span>
                                                        <div class="weekly-meal-details">
                                                            <span class="weekly-meal-type">@meal.Type</span>
                                                        </div>
                                                    </div>
                                                    @if (!IsPastDay(day))
                                                    {
                                                        <button class="btn-icon btn-remove"
                                                                @onclick="() => RemoveMealFromSchedule(daySchedule, meal)"
                                                                title="Remove from schedule">
                                                            ❌
                                                        </button>
                                                    }
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="no-weekly-meals">No meals scheduled</div>
                                        }
                                    </div>
                                    <div class="weekly-day-actions">
                                        @if (!IsPastDay(day))
                                        {
                                            <button class="btn btn-primary btn-sm" @onclick="() => ShowAddMealToDayModal(day)">
                                                ➕ Add Meals
                                            </button>
                                        }
                                        else
                                        {
                                            <div class="past-day-message">
                                                <small>Day has passed</small>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-outline" @onclick="CloseManageScheduleModal">Close</button>
                </div>
            </div>
        </div>
    }

    <!-- Add/Edit Meal Modal -->
    @if (showMealModal)
    {
        <div class="modal-overlay">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>@(editingMeal != null ? "✏️ Edit Meal" : "➕ Add New Meal")</h3>
                    <button class="close-btn" @onclick="CloseMealModal">×</button>
                </div>
                <div class="modal-body">
                    <form class="meal-form">
                        <div class="form-group">
                            <label>Meal Name *</label>
                            <input type="text" @bind="currentMeal.Name" class="form-control"
                                   placeholder="Enter meal name..." />
                        </div>
                        <div class="form-group">
                            <label>Description *</label>
                            <textarea @bind="currentMeal.Description" class="form-control" rows="3"
                                      placeholder="Describe the meal..."></textarea>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label>Meal Type *</label>
                                <select @bind="currentMeal.Type" class="form-control">
                                    <option value="Breakfast">Breakfast</option>
                                    <option value="Lunch">Lunch</option>
                                    <option value="Dinner">Dinner</option>
                                    <option value="Snack">Snack</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Price ($) *</label>
                                <input type="number" @bind="currentMeal.Price" step="0.01"
                                       class="form-control" min="0" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label>Preparation Time (min) *</label>
                                <input type="number" @bind="currentMeal.PreparationTime"
                                       class="form-control" min="1" />
                            </div>
                            <div class="form-group">
                                <label>Servings *</label>
                                <input type="number" @bind="currentMeal.Servings"
                                       class="form-control" min="1" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label>Chef Name</label>
                                <input type="text" @bind="currentMeal.ChefName"
                                       class="form-control" placeholder="Optional" />
                            </div>
                            <div class="form-group">
                                <label class="checkbox-label">
                                    <input type="checkbox" @bind="currentMeal.IsVegetarian" />
                                    🌱 Vegetarian
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Allergens</label>
                            <input type="text" @bind="currentMeal.Allergens"
                                   class="form-control" placeholder="e.g., nuts, dairy, gluten" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-outline" @onclick="CloseMealModal">Cancel</button>
                    <button class="btn btn-primary" @onclick="SaveMeal"
                            disabled="@(!CanSaveMeal())">
                        @(editingMeal != null ? "Update Meal" : "Add Meal")
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Add Meal to Day Modal -->
    @if (showAddMealToDayModal)
    {
        <div class="modal-overlay">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>➕ Add Meals to @selectedDaySchedule?.Day.ToString("dddd, MMMM dd")</h3>
                    <button class="close-btn" @onclick="CloseAddMealToDayModal">×</button>
                </div>
                <div class="modal-body">
                    <div class="available-meals-list">
                        <h4>Available Meals</h4>
                        @if (availableMeals.Any())
                        {
                            <div class="meal-selection-list">
                                @foreach (var meal in availableMeals)
                                {
                                    <div class="meal-selection-item @(selectedMealsForDay.Contains(meal.Id) ? "selected" : "")">
                                        <div class="meal-selection-checkbox">
                                            <input type="checkbox"
                                                   checked="@selectedMealsForDay.Contains(meal.Id)"
                                                   @onchange="@((e) => ToggleMealSelection(meal.Id, (bool)e.Value))" />
                                        </div>
                                        <div class="meal-selection-info">
                                            <h5>@meal.Name</h5>
                                            <p>@meal.Description</p>
                                            <div class="meal-selection-details">
                                                <span class="tag @meal.Type.ToLower()">@meal.Type</span>
                                                <span class="price">$@meal.Price.ToString("0.00")</span>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="no-available-meals">
                                <p>No meals available. Add some meals first.</p>
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-outline" @onclick="CloseAddMealToDayModal">Cancel</button>
                    <button class="btn btn-primary" @onclick="AddSelectedMealsToDay"
                            disabled="@(!selectedMealsForDay.Any())">
                        Add Selected (@selectedMealsForDay.Count)
                    </button>
                </div>
            </div>
        </div>
    }
}
@code {
    private bool isAuthChecked = false;
    private bool isAuthorized = false;
    private bool isCafeteriaWorker = false;
    private bool isLoading = true;
    private bool showManageScheduleModal = false;
    private bool showMealModal = false;
    private bool showAddMealToDayModal = false;

    // Data
    private User? currentUser = null;
    private FoodSchedule? tomorrowMenu = null;
    private List<FoodSchedule> weeklySchedule = new();
    private List<FoodMeal> availableMeals = new();
    private List<FoodMeal> allMeals = new();
    private HashSet<int> selectedMealsForDay = new();
    private List<DateTime> weekDays = new();

    // Modals
    private FoodMeal currentMeal = new();
    private FoodMeal? editingMeal = null;
    private DateTime selectedDay = DateTime.Today;
    private FoodSchedule? selectedDaySchedule = null;
    private DateTime currentWeekStart = DateTime.Today;

    protected override async Task OnInitializedAsync()
    {
        await CheckAuthorization();
        if (isAuthorized)
        {
            await LoadFoodData();
            InitializeWeek();
        }
    }

    private async Task CheckAuthorization()
    {
        try
        {
            for (int i = 0; i < 20; i++)
            {
                if (AuthStateService.CurrentUser != null)
                    break;
                await Task.Delay(100);
            }

            currentUser = AuthStateService.CurrentUser;
            isAuthorized = currentUser != null && currentUser.Role == "Student";

            if (isAuthorized)
            {
                isCafeteriaWorker = await CheckIfCafeteriaWorker();
            }

            isAuthChecked = true;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Authorization error: {ex.Message}");
            isAuthChecked = true;
            StateHasChanged();
        }
    }

    private async Task<bool> CheckIfCafeteriaWorker()
    {
        if (currentUser == null) return false;

        try
        {
            return await Context.CafeteriaWorkers
                .AnyAsync(cw => cw.StudentId == currentUser.Id && cw.IsActive);
        }
        catch
        {
            return false;
        }
    }

    private async Task LoadFoodData()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            // Load tomorrow's menu
            var tomorrow = DateTime.Today.AddDays(1);
            tomorrowMenu = await Context.FoodSchedules
                .Include(fs => fs.Meals)
                .FirstOrDefaultAsync(fs => fs.Day.Date == tomorrow.Date);

            // Load all meals (for the new section)
            await LoadAllMeals();

            // Load weekly schedule for cafeteria workers
            if (isCafeteriaWorker)
            {
                await LoadWeeklyScheduleData();

                // Load available meals for scheduling
                availableMeals = await Context.FoodMeals
                    .Where(fm => fm.FoodScheduleId == null) // Only show unscheduled meals
                    .OrderBy(fm => fm.Name)
                    .ToListAsync();
            }

            isLoading = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading food data: {ex.Message}");
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadAllMeals()
    {
        try
        {
            allMeals = await Context.FoodMeals
                .Include(fm => fm.FoodSchedule)
                .OrderBy(fm => fm.Name)
                .ToListAsync();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading all meals: {ex.Message}");
        }
    }

    private async Task LoadWeeklyScheduleData()
    {
        try
        {
            var weekStart = currentWeekStart;
            var weekEnd = weekStart.AddDays(4); // Only Monday to Friday

            weeklySchedule = await Context.FoodSchedules
                .Include(fs => fs.Meals)
                .Where(fs => fs.Day >= weekStart && fs.Day <= weekEnd)
                .ToListAsync();

            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading weekly schedule: {ex.Message}");
        }
    }

    private FoodSchedule? GetDaySchedule(DateTime day)
    {
        return weeklySchedule?.FirstOrDefault(ws => ws.Day.Date == day.Date);
    }

    private bool IsPastDay(DateTime day)
    {
        return day.Date < DateTime.Today;
    }

    private void InitializeWeek()
    {
        // Start from the most recent Monday
        currentWeekStart = DateTime.Today;
        while (currentWeekStart.DayOfWeek != DayOfWeek.Monday)
        {
            currentWeekStart = currentWeekStart.AddDays(-1);
        }

        // Only include Monday to Friday (5 days)
        weekDays = Enumerable.Range(0, 5)
            .Select(i => currentWeekStart.AddDays(i))
            .ToList();
    }

    // Schedule management
    private async void ShowManageScheduleModal()
    {
        showManageScheduleModal = true;
        await LoadWeeklyScheduleData(); // Load data when modal opens
        StateHasChanged();
    }

    private void CloseManageScheduleModal()
    {
        showManageScheduleModal = false;
        StateHasChanged();
    }

    // Add meal to day functionality
    private async void ShowAddMealToDayModal(DateTime day)
    {
        selectedDay = day;

        // Get or create the schedule for this day
        var existingSchedule = await Context.FoodSchedules
            .Include(fs => fs.Meals)
            .FirstOrDefaultAsync(fs => fs.Day.Date == day.Date);

        selectedDaySchedule = existingSchedule ?? new FoodSchedule { Day = day };

        // Load available meals (meals not scheduled for any day, or already in this day's schedule)
        availableMeals = await Context.FoodMeals
            .Where(fm => fm.FoodScheduleId == null || fm.FoodScheduleId == selectedDaySchedule.Id)
            .OrderBy(fm => fm.Name)
            .ToListAsync();

        // Pre-select meals that are already in this day's schedule
        selectedMealsForDay.Clear();
        if (selectedDaySchedule.Meals != null)
        {
            foreach (var meal in selectedDaySchedule.Meals)
            {
                selectedMealsForDay.Add(meal.Id);
            }
        }

        showAddMealToDayModal = true;
        StateHasChanged();
    }

    private async void ShowAddMealToDayModal(FoodSchedule schedule)
    {
        selectedDay = schedule.Day;
        selectedDaySchedule = schedule;

        // Load available meals (meals not scheduled for any day, or already in this day's schedule)
        availableMeals = await Context.FoodMeals
            .Where(fm => fm.FoodScheduleId == null || fm.FoodScheduleId == schedule.Id)
            .OrderBy(fm => fm.Name)
            .ToListAsync();

        // Pre-select meals that are already in this day's schedule
        selectedMealsForDay.Clear();
        if (schedule.Meals != null)
        {
            foreach (var meal in schedule.Meals)
            {
                selectedMealsForDay.Add(meal.Id);
            }
        }

        showAddMealToDayModal = true;
        StateHasChanged();
    }

    private void CloseAddMealToDayModal()
    {
        showAddMealToDayModal = false;
        selectedMealsForDay.Clear();
        StateHasChanged();
    }

    private void ToggleMealSelection(int mealId, bool isSelected)
    {
        if (isSelected)
        {
