    private async Task DeleteMeal(FoodMeal meal)
    {
        bool confirm = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete {meal.Name}?");
        if (confirm)
        {
            try
            {
                // First, check if the meal is scheduled for any days
                var scheduledDays = await Context.FoodSchedules
                    .Where(fs => fs.Meals.Any(m => m.Id == meal.Id))
                    .ToListAsync();

                // Remove the meal from all schedules
                foreach (var schedule in scheduledDays)
                {
                    var mealToRemove = schedule.Meals.FirstOrDefault(m => m.Id == meal.Id);
                    if (mealToRemove != null)
                    {
                        mealToRemove.FoodScheduleId = null;
                        Context.FoodMeals.Update(mealToRemove);
                    }
                }

                // Check if MealVotes table still exists and remove any votes for this meal
                try
                {
                    var mealVotes = await Context.MealVotes
                        .Where(mv => mv.MealId == meal.Id)
                        .ToListAsync();

                    if (mealVotes.Any())
                    {
                        Context.MealVotes.RemoveRange(mealVotes);
                    }
                }
                catch
                {
                    // MealVotes table might not exist anymore, ignore this error
                }

                // Now delete the meal
                Context.FoodMeals.Remove(meal);
                await Context.SaveChangesAsync();

                await LoadFoodData(); // Refresh data
                
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error details: {ex.Message}");
                if (ex.InnerException != null)
                {
                    Console.WriteLine($"Inner exception: {ex.InnerException.Message}");
                }

                await JSRuntime.InvokeVoidAsync("alert", $"Error deleting meal: {ex.Message}");
            }
        }
    }

